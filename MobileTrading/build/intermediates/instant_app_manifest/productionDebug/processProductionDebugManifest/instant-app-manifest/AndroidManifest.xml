<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fss.tcbs.mobiletrading"
    android:targetSandboxVersion="2"
    android:versionCode="13"
    android:versionName="1.1.7" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="26" />

    <permission
        android:name="com.fss.tcbs.mobiletrading.permission.MAPS_RECEIVE"
        android:protectionLevel="signature" />
    <permission
        android:name="custom.permission.RECEIVER_BROADCAST"
        android:protectionLevel="signature" />

    <uses-permission android:name="custom.permission.RECEIVER_BROADCAST" />
    <uses-permission android:name="com.fss.tcbs.mobiletrading.permission.MAPS_RECEIVE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" />

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <!-- <uses-permission android:name="android.permission.GET_ACCOUNTS" /> -->
    <!-- <uses-permission android:name="com.yahoo.mobile.client.android.permissions.YAHOO_INTER_APP" /> -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- <permission -->
    <!-- android:name="com.yahoo.mobile.client.android.permissions.YAHOO_INTER_APP" -->
    <!-- android:protectionLevel="signature" /> -->
    <permission
        android:name="com.fss.tcbs.mobiletrading.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.androidhive.pushnotifications.permission.C2D_MESSAGE" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name="android.support.multidex.MultiDexApplication"
        android:allowBackup="false"
        android:debuggable="true"
        android:icon="@drawable/ic_icon"
        android:label="@string/mobileapp_name"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen" >
        <activity
            android:name="com.fss.tcbs.mobiletrading.Login"
            android:configChanges="keyboardHidden|orientation|screenSize|locale"
            android:label="@string/mobileapp_name"
            android:windowSoftInputMode="adjustResize|stateHidden" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.fss.tcbs.mobiletrading.MainActivity_Mobile"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:largeHeap="true"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|stateHidden" />
        <activity
            android:name="com.fss.tcbs.mobiletrading.MainActivity_Tablet"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:largeHeap="true"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="adjustResize|stateHidden" />
        <activity
            android:name="com.fss.tcbs.mobiletrading.MapActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.fss.tcbs.mobiletrading.OTPConfirm"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />

        <receiver
            android:name="com.google.android.gcm.GCMBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>

                <!-- Receives the actual messages. -->
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <!-- Receives the registration id. -->
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />

                <category android:name="com.fss.tcbs.mobiletrading" />
            </intent-filter>
        </receiver>

        <service android:name="com.fss.tcbs.mobiletrading.GCMIntentService" />

        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyD-oPr6FalSWlCCG2odvdoopFTgm3yb89U" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="android.support.VERSION"
            android:value="26.1.0" />
    </application>

</manifest>