<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/alertdialog_width"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/background_alertdialog"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/text_alertdialog_title"
        style="@style/Label_Style"
        android:layout_width="match_parent"
        android:layout_height="@dimen/alertdialog_title_height"
        android:gravity="center"
        android:textColor="@color/text_color"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/header_separation_color"
        android:visibility="gone" />

    <TextView
        android:id="@+id/text_alertdialog_message"
        style="@style/Label_Style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="@dimen/alertdialog_content_height"
        android:textColor="@color/text_color" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/viewline" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/text_alertdialog_negative"
            style="@style/Label_Style"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="5"
            android:gravity="center"
            android:textColor="@color/red_brown_text"
            android:visibility="gone" />

        <View
            android:id="@+id/line_alertdialog_1"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/header_separation_color"
            android:visibility="gone" />

        <TextView
            android:id="@+id/text_alertdialog_possitive"
            style="@style/Label_Style"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="5"
            android:gravity="center"
            android:text="@string/XacNhan"
            android:textColor="@color/green_text" />
    </LinearLayout>

</LinearLayout>