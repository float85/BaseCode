<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3.0"
            android:orientation="vertical"
            android:paddingRight="5dp" >

            <TextView
                android:id="@+id/text_symbol"
                style="@style/Content_Style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/text_tradeplace"
                style="@style/Label_Style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/green_text"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/text_fullstock"
                style="@style/Label_Style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8sp" />

           <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             >

               
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3.0" >

            <TextView
                android:id="@+id/text_receivingT3"
                style="@style/Content_Style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/green_text"
                android:visibility="gone" />

            <TextView
                style="@style/Label_Style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/ChoVeT3"
                android:visibility="gone" />

            <TextView
                android:id="@+id/text_receivingT2"
                style="@style/Content_Style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/text_receivingT3"
                android:textColor="@color/green_text" />

            <TextView
                style="@style/Label_Style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/text_receivingT3"
                android:text="@string/ChoVeT2" />

            <TextView
                android:id="@+id/text_receivingT1"
                style="@style/Content_Style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/text_receivingT2"
                android:textColor="@color/green_text" />

            <TextView
                style="@style/Label_Style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/text_receivingT2"
                android:text="@string/ChoVeT1" />

            <TextView
                android:id="@+id/text_receivingT0"
                style="@style/Content_Style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/text_receivingT1"
                android:textColor="@color/green_text" />

            <TextView
                style="@style/Label_Style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/text_receivingT1"
                android:text="@string/ChoVeT0" />
			 <TextView
                    style="@style/Label_Style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/text_receivingT0"
                    android:text="@string/HienCo" />

                <TextView
                    android:id="@+id/text_HienCo"
                    style="@style/Content_Style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/text_receivingT0"
                    android:textColor="@color/green_text" />
            <TextView
                android:id="@+id/text_total"
                style="@style/Content_Style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/text_HienCo"
                android:textColor="@color/green_text" />

            <TextView
                style="@style/Label_Style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/text_HienCo"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/text_total"
                android:singleLine="true"
                android:text="@string/TongCong" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/expand_listview_item_division" />

    <LinearLayout
        android:id="@+id/stockbalanceitemview_expand"
        android:layout_width="match_parent"
        android:layout_height="@dimen/expand_listview_item_height"
        android:gravity="center_vertical|right"
        android:orientation="horizontal"
        android:paddingRight="10dp"
        android:visibility="gone" >

        <customwidget.button.ButtonStyle1
            android:id="@+id/btn_stockbalance_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_expandlistviewitem_button"
            android:text="@string/Mua"
            android:textColor="@color/white_text"
            android:textSize="15sp" />

        <customwidget.button.ButtonStyle1
            android:id="@+id/btn_stockbalance_sell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_expandlistviewitem_button"
            android:text="@string/Ban" />
    </LinearLayout>

</LinearLayout>