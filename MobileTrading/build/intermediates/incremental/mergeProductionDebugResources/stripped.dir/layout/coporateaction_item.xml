<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/text_coporateaction_item_symbol"
            style="@style/Label_Style"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/yellow_text"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/text_coporateaction_item_eventtype"
            style="@style/Label_Style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="2"
            android:gravity="left|center_vertical"
            android:singleLine="true"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/text_coporateaction_item_closedate"
            style="@style/Label_Style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="2"
            android:gravity="left|center_vertical"
            android:singleLine="true"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/text_coporateaction_item_status"
            style="@style/Label_Style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="3"
            android:gravity="left|center_vertical"
            android:singleLine="true"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_soluongchungkhoansohuu"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/text_tyle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/text_soluongchungkhoanchove"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/text_sotienchove"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/text_ngaythuchien"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/listview_separation_color" />

</LinearLayout>