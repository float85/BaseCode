<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/lay_myspinner_one"
        android:layout_width="match_parent"
        android:layout_height="@dimen/m_labelcontenthorilayout_height"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/myspinner_label"
            style="@style/Label_Style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:layout_weight="3" />

        <TextView
            android:id="@+id/text_myspinner_spn"
            style="@style/Content_Style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:singleLine="true"
            android:textSize="16sp" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_myspinner"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@color/transparent"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_arrow" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lay_myspinner_one"
        android:orientation="horizontal" >

        <View
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_weight="3" />

        <View
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_weight="7"
            android:background="@color/lc_separation_color" />
    </LinearLayout>

</RelativeLayout>