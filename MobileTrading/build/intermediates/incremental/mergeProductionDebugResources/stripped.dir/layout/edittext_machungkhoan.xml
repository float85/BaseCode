<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="30dp"
    android:layout_margin="10dp"
    android:background="@drawable/background_edittext_1"
    android:orientation="horizontal" >

    <Button
        android:id="@+id/btn_EdittextMaChungKhoan_Giam"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:background="@drawable/background_button_2"
        android:gravity="center"
        android:text="-"
        android:textSize="30.0sp" />

    <AutoCompleteTextView
        android:id="@+id/edt_EdittextMaChungKhoan"
        style="@style/EditText_Style"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="6"
        android:completionThreshold="1"
        android:inputType="textCapCharacters"
        android:singleLine="true" />

    <Button
        android:id="@+id/btn_EdittextMaChungKhoan_Tang"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:background="@drawable/background_button_2"
        android:gravity="center"
        android:text="+"
        android:textSize="30.0sp" />

</LinearLayout>