<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.fss.tcbs.mobiletrading"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg_fragment"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/lay_SaoKeTien1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/layout_saoketien_textbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/m_paddingLeft"
            android:paddingRight="@dimen/m_paddingRight" >

            <mobiletrading.design.InputDate
                android:id="@+id/date_cashstatement_fromdate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                app:separationColorInputDate="@color/transparent" />

            <mobiletrading.design.InputDate
                android:id="@+id/date_cashstatement_todate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="5"
                app:separationColorInputDate="@color/transparent" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_SaoKeTien_Search"
            style="@style/Button_Background1"
            android:layout_width="match_parent"
            android:layout_below="@+id/layout_saoketien_textbox"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="@string/XacNhan"
            android:textColor="@color/text_color"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <View
            android:id="@+id/line_cashstatement_header"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/header_separation_color" />

        <LinearLayout
            android:id="@+id/lay_header"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line_cashstatement_header"
            android:orientation="horizontal" >

            <TextView
                style="@style/Header_Style"
                android:layout_weight="2.0"
                android:text="@string/saoketien_label_ngay" />

            <View
                android:layout_width="0.3dp"
                android:layout_height="30dp"
                android:background="@color/header_separation_color" />

            <TextView
                style="@style/Header_Style"
                android:layout_weight="2.0"
                android:text="@string/Tang" />

            <View
                android:layout_width="0.3dp"
                android:layout_height="30dp"
                android:background="@color/header_separation_color" />

            <TextView
                style="@style/Header_Style"
                android:layout_weight="2.0"
                android:text="@string/Giam" />

            <View
                android:layout_width="0.3dp"
                android:layout_height="30dp"
                android:background="@color/header_separation_color" />

            <TextView
                style="@style/Header_Style"
                android:layout_weight="2.0"
                android:text="@string/SoDu" />

            <View
                android:layout_width="0.3dp"
                android:layout_height="30dp"
                android:background="@color/header_separation_color" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lay_header"
            android:layout_centerHorizontal="true"
            android:text="@string/error_no_data_to_display"
            android:textColor="#ff888888" />

        <TextView
            android:id="@+id/text_saoketien_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lay_header"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="Loading..."
            android:textColor="#ff888888"
            android:visibility="gone" />

        <ListView
            android:id="@+id/listview_SaoKeTien"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_fragment"
            android:divider="@color/listview_separation_color"
            android:paddingLeft="@dimen/m_paddingLeft"
            android:paddingRight="5dp"
            android:scrollbars="none"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    </RelativeLayout>

</LinearLayout>