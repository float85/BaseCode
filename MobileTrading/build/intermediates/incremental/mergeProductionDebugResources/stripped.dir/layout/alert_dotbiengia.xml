<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/alert_dotbiengia"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg_fragment"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <Spinner
                android:id="@+id/spn_alertgia"
                style="@style/EditText_Style"
                android:layout_width="fill_parent"
                android:layout_margin="5dp"
                android:layout_marginBottom="5dp" />

            <EditText android:textCursorDrawable="@drawable/shape_textcursoredittext"
                android:id="@+id/edt_alertgia_symbols"
                style="@style/EditText_Style"
                android:layout_width="fill_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:hint="@string/CK1CK2CK3"
                android:inputType="textCapCharacters" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btn_alertgia_GiaCaoNhat"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="5.0"
                    android:background="@drawable/button_active"
                    android:text="@string/dotbiengia_lbl_GiaCaoNhat"
                    android:textColor="#ffffffff"
                    android:textSize="13.0sp"
                     />

                <Button
                    android:id="@+id/btn_alertgia_GiaThapNhat"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="5.0"
                    android:background="@drawable/button_active"
                    android:text="@string/dotbiengia_lbl_GiaThapNhat"
                    android:textColor="#ffffffff"
                    android:textSize="13.0sp"
                     />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/lbl_alertgia_DotBienTrong"
                    style="@style/Label_Style"
                    android:text="@string/dotbienkhoiluong_lbl_DotBienTrong" />

                <Spinner
                    android:id="@+id/spn_alertgia_DotBienTrong"
                    style="@style/EditText_Style"
                    android:layout_width="150dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/lbl_alertgia_KLDotBien"
                    style="@style/Label_Style"
                    android:text="@string/dotbienkhoiluong_lbl_KhoiLuongDB" />

                <Spinner
                    android:id="@+id/spn_alertgia_KLDotBien"
                    style="@style/EditText_Style"
                    android:layout_width="150dp" />
            </LinearLayout>

            <CheckBox
                android:id="@+id/checkBox_alertgia_SendEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/SendEmail"
                android:textColor="#ffffffff" />

            <TextView
                android:id="@+id/text_alertgia_Desc"
                style="@style/Label_Style"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" />

            <Button
                android:id="@+id/btn_alertgia_CapNhat"
                style="@style/Button_Background1"
                android:layout_width="fill_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:text="@string/cap_nhat" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <TextView
                    style="@style/Label_Style"
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:background="@drawable/button_not_select2"
                    android:singleLine="true"
                    android:text="@string/ngay_tao" />

                <TextView
                    style="@style/Label_Style"
                    android:layout_width="0dp"
                    android:layout_weight="4.0"
                    android:background="@drawable/button_not_select2"
                    android:singleLine="true"
                    android:text="@string/dieu_kien" />

                <TextView
                    style="@style/Label_Style"
                    android:layout_width="0dp"
                    android:layout_weight="2.5"
                    android:background="@drawable/button_not_select2"
                    android:singleLine="true"
                    android:text="@string/danh_sach_ma" />
            </LinearLayout>

            <ListView
                android:id="@+id/listview_alertgia"
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:divider="@color/listview_separation_color" android:scrollbars="none" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>