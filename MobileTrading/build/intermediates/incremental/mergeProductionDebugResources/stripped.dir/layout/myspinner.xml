<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/lay_myspinner_one"
        android:layout_width="match_parent"
        android:layout_height="@dimen/m_labelcontentverlayout_height"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/btn_myspinner"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/myspinner_label"
            style="@style/Label_Style"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="0dp"
            android:layout_weight="4"
            android:visibility="gone" />

        <TextView
            android:id="@+id/text_myspinner_spn"
            style="@style/Content_Style"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:singleLine="true" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_myspinner"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@color/transparent"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_arrow" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/lay_myspinner_one"
        android:background="@color/lc_separation_color" />

</RelativeLayout>