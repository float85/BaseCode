<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="11" >

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5" />

    <TextView
        android:id="@+id/labelcontentver_label"
        style="@style/Label_Style"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:gravity="top" />

    <TextView
        android:id="@+id/labelcontentver_content"
        style="@style/Content_Style"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:gravity="bottom"
        android:singleLine="true"
        android:textColorHint="@color/edittext_hint_color" />

    <EditText
        android:id="@+id/labelcontentver_content2"
        style="@style/EditText_Style"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:gravity="bottom"
        android:singleLine="true"
        android:textColorHint="@color/edittext_hint_color"
        android:textCursorDrawable="@drawable/shape_textcursoredittext"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5" />

    <View
        android:id="@+id/labelcontentver_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/lc_separation_color" />

</LinearLayout>