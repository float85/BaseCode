<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chooseafacctno"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg_fragment"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:paddingLeft="@dimen/m_paddingLeft" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/btn_chooseafacctno_logout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="3dp"
            android:background="@color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_logout_mobile" />
        <Button
            android:id="@+id/btn_chooseafacctno_logout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        >

        <!-- <TextView -->
        <!-- android:id="@+id/lbl_chonTK_fullname" -->
        <!-- style="@style/Label_Style" -->
        <!-- android:layout_width="150dp" -->
        <!-- android:visibility="gone" -->
        <!-- android:text="@string/XinChao" /> -->

        <ImageView
            android:id="@+id/iv_chonTK_fullname"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_account_2" />

        <TextView
            android:id="@+id/text_chonTK_fullname"
            style="@style/Content_Style"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:gravity="center|left"
            android:layout_toRightOf="@+id/iv_chonTK_fullname"
            android:textColor="@color/black_color"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lbl_chonTK_afacctno"
            style="@style/Label_Style"
            android:layout_width="wrap_content"
            android:layout_below="@+id/iv_chonTK_fullname"
            android:text="@string/SoTieuKhoan" />

        <TextView
            android:id="@+id/text_chonTK_afacctno"
            style="@style/Content_Style"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center|right"
            android:layout_below="@+id/iv_chonTK_fullname"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/lbl_chonTK_afacctno"
            android:textColor="@color/red_color" />

        <View
            android:id="@+id/viewline"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/lbl_chonTK_afacctno"
            android:layout_marginRight="10dp"
            android:background="@color/listview_separation_color" />

        <TextView
            android:id="@+id/lbl_chonTK_SoLuuKy"
            style="@style/Label_Style"
            android:layout_width="wrap_content"
            android:layout_below="@+id/viewline"
            android:text="@string/SoLuuKy" />

        <EditText
            android:id="@+id/edt_chonTK_SoLuuKy"
            style="@style/EditText_Style"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/viewline"
            android:gravity="center|right"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/lbl_chonTK_SoLuuKy"
            android:inputType="textCapCharacters"
            android:selectAllOnFocus="false"
            android:singleLine="true"
            android:textCursorDrawable="@drawable/shape_textcursoredittext" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical" >

        <TextView
            style="@style/Label_Style"
            android:text="@string/TieuKhoan"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="@color/red_color" />
    </LinearLayout>

    <ListView
        android:id="@+id/listview_chontieukhoan"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:dividerHeight="1dp"
        android:divider="@color/listview_separation_color"
        android:scrollbars="none" />

</LinearLayout>