<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.fss.tcbs.mobiletrading"
    android:id="@+id/internalcashtransfer_register"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg_fragment"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:paddingLeft="@dimen/m_paddingLeft"
    android:paddingRight="@dimen/m_paddingRight" >

    <!-- <mobiletrading.design.LabelContentLayout -->
    <!-- android:id="@+id/edt_DKCT_noibo_SoLuuKy" -->
    <!-- android:layout_width="match_parent" -->
    <!-- android:layout_height="@dimen/m_labelcontentverlayout_height" -->
    <!-- app:contentColor="@color/text_color" -->
    <!-- app:contentHint="@string/SoLuuKyNhan" -->
    <!-- app:editable="true" -->
    <!-- app:inputType="textCap" -->
    <!-- app:labelText="@string/SoLuuKyNhan" -->
    <!-- app:orientation="vertical" /> -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="25dp" >

        <TextView
            android:id="@+id/tv_soluukynhan"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:text="@string/SoLuuKyNhan" />

        <TextView
            android:id="@+id/tv_markerror"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@id/tv_soluukynhan"
            android:text="*"
            android:textColor="#FF0000" />
    </RelativeLayout>

    <EditText
        android:id="@+id/edt_soluukynhan"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@drawable/bg_edittext_hideunderline"
        android:hint="@string/SoLuuKyNhan"
        android:textSize="15dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="25dp" >

        <TextView
            android:id="@+id/tv_tnth"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:text="@string/TenNguoiThuHuong" />
        <!-- <TextView -->
        <!-- android:id="@+id/tv_soluukynhan" -->
        <!-- android:layout_width="wrap_content" -->
        <!-- android:layout_height="match_parent" -->
        <!-- android:layout_marginTop="3dp" -->
        <!-- android:text="@string/SoLuuKyNhan" /> -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@id/tv_tnth"
            android:text="*"
            android:textColor="#FF0000" />
    </RelativeLayout>

    <TextView
        android:id="@+id/text_DKCT_noibo_NguoiNhan"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="3dp"
        android:textSize="15dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#C8C8C8" />
    <!-- <mobiletrading.design.LabelContentLayout -->
    <!-- android:id="@+id/text_DKCT_noibo_NguoiNhan" -->
    <!-- android:layout_width="match_parent" -->
    <!-- android:layout_height="@dimen/m_labelcontentverlayout_height" -->
    <!-- app:contentColor="@color/text_color" -->
    <!-- app:labelText="@string/TenNguoiThuHuong" -->
    <!-- app:orientation="vertical" /> -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="25dp" >

        <TextView
            android:id="@+id/tv_sotieukhoannhan"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:text="@string/SoTieuKhoanNhan" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@id/tv_sotieukhoannhan"
            android:text="*"
            android:textColor="#FF0000" />
    </RelativeLayout>

    <mobiletrading.design.MySpinner
        android:id="@+id/spn_DKCT_noibo_SoTieuKhoan"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        app:hasLabel="false"
        app:textMySpinner="@string/SoTieuKhoanNhan" />

    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#C8C8C8" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_DKCT_noibo_ChapNhan"
            style="@style/Button_Background1"
            android:text="@string/XacNhan" />
    </LinearLayout>

</LinearLayout>