<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_feature1" >

    <customwidget.tabselector.TabSelector
        android:id="@+id/tabselector_accountassetsinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <customwidget.tabselector.TabItem
            android:id="@+id/tab_accountassetsinfo_cash"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            app:textTabItem="@string/SoDuTaiKhoan" />

        <customwidget.tabselector.TabItem
            android:id="@+id/tab_accountassetsinfo_stock"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            app:textTabItem="@string/DanhMucDauTu" />
    </customwidget.tabselector.TabSelector>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_accountassetsinfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>