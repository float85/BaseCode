<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.fss.tcbs.mobiletrading"
    android:id="@+id/enter_pin_code_dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_fragment"
    android:orientation="vertical" >

    <mobiletrading.design.LabelContentLayout
        android:id="@+id/edt_enterpincode_pin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/m_labelcontentverlayout_height"
        app:contentHint="@string/chuyentiennoibo_hint_MaPin"
        app:editable="true"
        app:inputType="textPassword"
        app:labelText="@string/chuyentiennoibo_hint_MaPin"
        app:orientation="vertical" />

    <EditText android:textCursorDrawable="@drawable/shape_textcursoredittext"
        android:id="@+id/edt_enterpincode_pin"
        style="@style/EditText_Style"
        android:layout_width="fill_parent"
        android:layout_margin="5dp"
        android:hint="@string/chuyentiennoibo_hint_MaPin"
        android:inputType="textPassword"
        android:singleLine="true" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="9.0" >

        <Button
            android:id="@+id/btn_enterpincode_accept"
            style="@style/Button_Background1"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginRight="9dp"
            android:layout_weight="3.0"
            android:text="@string/XacNhan" />

        <Button
            android:id="@+id/btn_enterpincode_cancel"
            style="@style/Button_Background1"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="9dp"
            android:layout_weight="3.0"
            android:text="@string/Cancel" />
    </LinearLayout>

</LinearLayout>