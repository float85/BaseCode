<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/banggia_dialog_addlistfav"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg_fragment"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="5dp" >

        <TextView
            android:id="@+id/lbl_banggia_listfavname"
            style="@style/Label_Style"
            android:layout_marginTop="5dp"
            android:text="@string/TenDanhMuc" />

        <EditText android:textCursorDrawable="@drawable/shape_textcursoredittext"
            android:id="@+id/edt_banggia_dialog_listfavname"
            style="@style/EditText_Style"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/lbl_banggia_listfavname" />

        <TextView
            android:id="@+id/lbl_banggia_symbols"
            style="@style/Label_Style"
            android:layout_below="@+id/lbl_banggia_listfavname"
            android:layout_marginTop="5dp"
            android:text="@string/MaCK" />

        <EditText android:textCursorDrawable="@drawable/shape_textcursoredittext"
            android:id="@+id/edt_banggia_dialog_symbols"
            style="@style/EditText_Style"
            android:layout_below="@+id/lbl_banggia_listfavname"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/lbl_banggia_symbols"
            android:hint="@string/CK1CK2CK3"
            android:inputType="textCapCharacters"
            android:singleLine="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="9.0" >

        <Button
            android:id="@+id/btn_banggia_dialog_Accept"
            style="@style/Button_Background1"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginRight="15dp"
            android:layout_weight="3.0"
            android:text="@string/XacNhan" />

        <Button
            android:id="@+id/btn_banggia_dialog_Cancel"
            style="@style/Button_Background1"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="3.0"
            android:text="@string/Cancel" />
    </LinearLayout>

</LinearLayout>