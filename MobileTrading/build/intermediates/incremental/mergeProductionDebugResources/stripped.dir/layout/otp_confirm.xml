<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/otp_confirm"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_fragment"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".OTPConfirm">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@drawable/actionbar_background">

        <ImageView
            android:id="@+id/img_otpconfirm_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/actionbar_btn"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_back" />

        <ImageView
            android:layout_width="@dimen/m_slidemenu_logo_width"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_logo" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:scaleType="centerInside"
        android:src="@drawable/lock" />

    <TextView
        android:id="@+id/text_otpconfirm_text1"
        style="@style/Label_Style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingLeft="@dimen/t_padding_content"
        android:paddingRight="@dimen/t_padding_content"
        android:paddingTop="10dp"
        android:visibility="invisible"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/t_padding_content"
        android:paddingRight="@dimen/t_padding_content">


        <EditText
            android:id="@+id/edt_otp_confirm_importotp"
            style="@style/EditText_Style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:hint="@string/NhapOTP"
            android:paddingLeft="10dp" />

        <Button
            android:id="@+id/btn_otp_confirm_next"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/backgroud_btnotp"
            android:text="@string/TiepTuc"
            android:textColor="@color/button_text_color"
            android:textSize="@dimen/m_button_textsize" />

    </LinearLayout>

    <TextView
        android:id="@+id/text_otpconfirm_text2"
        style="@style/Label_Style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingLeft="@dimen/t_padding_content"
        android:paddingRight="@dimen/t_padding_content"
        android:paddingTop="10dp" />

    <Button
        android:id="@+id/btn_otp_confirm_GetOTP"
        style="@style/Button_Background1"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/LayMaXacThuc" />
</LinearLayout>