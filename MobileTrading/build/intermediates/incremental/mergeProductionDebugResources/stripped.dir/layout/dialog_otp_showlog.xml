<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/alertdialog_width"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/background_alertdialog"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_alertdialog_title"
        style="@style/Label_Style"
        android:layout_width="match_parent"
        android:layout_height="@dimen/alertdialog_title_height"
        android:gravity="center"
        android:textColor="@color/black_color"
        android:visibility="visible" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/header_separation_color"
        android:visibility="visible" />

    <TextView
        android:id="@+id/text_alertdialog_message"
        style="@style/Label_Style"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:textColor="@color/text_color" />

    <LinearLayout
        android:id="@+id/vOTPOrder"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Nhập mã xác thực" />

        <EditText
            android:id="@+id/etSaveOTPOrderBookCT"
            style="@style/EditText_Style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="#e6e7e8"
            android:hint="OTP..."
            android:paddingLeft="5dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/vSaveOTPOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Lưu OTP" />

        <CheckBox
            android:id="@+id/cbSaveOTPOrderBookCT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/viewline" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_alertdialog_negative"
            style="@style/Label_Style"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="5"
            android:gravity="center"
            android:textColor="@color/red_brown_text"
            android:visibility="gone" />

        <View
            android:id="@+id/line_alertdialog_1"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/header_separation_color"
            android:visibility="gone" />

        <TextView
            android:id="@+id/text_alertdialog_possitive"
            style="@style/Label_Style"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="5"
            android:gravity="center"
            android:text="@string/XacNhan"
            android:textColor="@color/green_text" />
    </LinearLayout>

</LinearLayout>