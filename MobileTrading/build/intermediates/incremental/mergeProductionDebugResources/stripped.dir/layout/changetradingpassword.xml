<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.fss.tcbs.mobiletrading"
    android:id="@+id/changetradingpassword"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_fragment"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:paddingLeft="@dimen/m_paddingLeft"
    android:paddingRight="@dimen/m_paddingRight" >

    <mobiletrading.design.LabelContentLayout
        android:id="@+id/edt_thietlaptk_OldPin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/m_labelcontentverlayout_height"
        app:contentColor="@color/text_color"
        app:contentHint="@string/thietlaptk_OldPassTrading"
        app:editable="true"
        app:inputType="textPassword"
        app:labelText="@string/thietlaptk_OldPassTrading"
        app:orientation="vertical" />

    <mobiletrading.design.LabelContentLayout
        android:id="@+id/edt_thietlaptk_NewPin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/m_labelcontentverlayout_height"
        app:contentColor="@color/text_color"
        app:contentHint="@string/thietlaptk_NewPassTrading"
        app:editable="true"
        app:inputType="textPassword"
        app:labelText="@string/thietlaptk_NewPassTrading"
        app:orientation="vertical" />

    <mobiletrading.design.LabelContentLayout
        android:id="@+id/edt_thietlaptk_ConfirmPin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/m_labelcontentverlayout_height"
        app:contentColor="@color/text_color"
        app:contentHint="@string/thietlaptk_ConfirmPassTrading"
        app:editable="true"
        app:inputType="textPassword"
        app:labelText="@string/thietlaptk_ConfirmPassTrading"
        app:orientation="vertical" />

    <Button
        android:id="@+id/btn_thietlaptk_ChangePin"
        style="@style/Button_Background1"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="@string/XacNhan" />

    <Button
        android:id="@+id/btn_Huy"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

</LinearLayout>