<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/normalorderlist_itemview_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/m_paddingLeft"
            android:paddingRight="@dimen/m_paddingRight" >

            <TextView
                android:id="@+id/lbl_solenh_item_CustodyCd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:text="@string/TK"
                android:textColor="@color/text_color"
                android:textSize="13.0sp" />

            <TextView
                android:id="@+id/text_solenh_item_CustodyCd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/lbl_solenh_item_CustodyCd"
                android:paddingLeft="3dp"
                android:textColor="@color/text_color"
                android:textSize="13.0sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/m_paddingLeft"
            android:paddingRight="@dimen/m_paddingRight" >

            <TextView
                android:id="@+id/text_solenh_item_tv_side"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1.5"
                android:gravity="center"
                android:paddingLeft="3dp"
                android:textAllCaps="true"
                android:textSize="15.0sp" />

            <TextView
                android:id="@+id/text_solenh_item_tv_MaCK"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="2.0"
                android:gravity="center"
                android:paddingLeft="3dp"
                android:textColor="@color/text_color"
                android:textSize="15.0sp" />

            <TextView
                android:id="@+id/text_solenh_item_tv_SoLuong"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="2.0"
                android:gravity="center"
                android:paddingLeft="3dp"
                android:textSize="15.0sp" />

            <TextView
                android:id="@+id/text_solenh_item_tv_Gia"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1.7"
                android:gravity="center"
                android:paddingLeft="3dp"
                android:textSize="15.0sp" />

            <TextView
                android:id="@+id/text_solenh_item_tv_TrangThai"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="2.8"
                android:gravity="center"
                android:paddingLeft="3dp"
                android:textColor="@color/text_color"
                android:textSize="15.0sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/expand_listview_item_division" />

    <LinearLayout
        android:id="@+id/normalorderlist_itemview_expand"
        android:layout_width="match_parent"
        android:layout_height="@dimen/expand_listview_item_height"
        android:gravity="center_vertical|right"
        android:orientation="horizontal"
        android:paddingRight="10dp"
        android:visibility="gone" >

        <customwidget.button.ButtonStyle1
            android:id="@+id/btn_solenh_item_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Mua"
            android:textColor="@color/text_color"
            android:textSize="15sp" />

        <customwidget.button.ButtonStyle1
            android:id="@+id/btn_solenh_item_sell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Ban"
            android:textSize="15sp" />

        <customwidget.button.ButtonStyle1
            android:id="@+id/btn_solenh_item_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Cancel"
            android:textSize="15sp" />

        <customwidget.button.ButtonStyle1
            android:id="@+id/btn_solenh_item_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ChiTiet"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>