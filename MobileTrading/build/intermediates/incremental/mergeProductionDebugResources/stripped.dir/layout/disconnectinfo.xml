<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_fragment"
    android:orientation="vertical"
    android:paddingLeft="@dimen/m_paddingLeft"
    android:paddingRight="@dimen/m_paddingRight">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <mobiletrading.design.LabelContentLayout
                android:id="@+id/lb_sotaikhoan"
                android:layout_width="match_parent"
                android:layout_height="@dimen/m_labelcontentverlayout_height"
                android:visibility="gone"
                app:labelText="@string/SoTaiKhoan"
                app:orientation="vertical" />

            <mobiletrading.design.LabelContentLayout
                android:id="@+id/spn_sotieukhoan"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:visibility="gone"
                app:labelText="@string/SoTieuKhoan"
                app:orientation="vertical" />

            <mobiletrading.design.LabelContentLayout
                android:id="@+id/spn_nganhangtaikhoan"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:visibility="visible"
                app:labelText="@string/NganHangKetNoi"
                app:orientation="vertical" />

            <mobiletrading.design.LabelContentLayout
                android:id="@+id/lb_sotknganhangketnoi"
                android:layout_width="match_parent"
                android:layout_height="@dimen/m_labelcontentverlayout_height"
                android:visibility="visible"
                app:labelText="@string/SoTKNganHangKetNoi"
                app:orientation="vertical" />

            <mobiletrading.design.LabelContentLayout
                android:id="@+id/spn_TuDongChuyenTienSangIA"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:labelText="@string/TudongchuyentiensangIA"
                app:orientation="vertical" />

            <Button
                android:id="@+id/btn_ChapNhan"
                style="@style/Button_Background1"
                android:layout_marginTop="10dp"
                android:text="@string/disconnectinfo" />

            <mobiletrading.design.LabelContentLayout
                android:id="@+id/spn_dungtkPhuTraNo"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:labelText="@string/DungTKphudetrano"
                app:orientation="vertical" />

            <RelativeLayout
                android:id="@+id/vOTPChangeBankDisCn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <mobiletrading.design.LabelContentLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:labelText="@string/NhapMaXacThuc"
                    app:orientation="horizontal" />

                <EditText
                    android:id="@+id/etSaveOTPChangeBankDisCn"
                    style="@style/EditText_Style"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="#FFFFFF"
                    android:hint="@string/NhapOTP"
                    android:paddingLeft="5dp" />

            </RelativeLayout>

            <Button
                android:id="@+id/btn_disconnect"
                style="@style/Button_Background1"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="@string/disconnectinfo"
                android:visibility="visible" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>