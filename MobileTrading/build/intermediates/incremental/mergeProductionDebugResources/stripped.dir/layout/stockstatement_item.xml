<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" >

            <TextView
                android:id="@+id/text_SaoKeCKItem_Date"
                style="@style/Label_Style"
                android:layout_width="0dp"
                android:layout_weight="2.8"
                android:gravity="left|center_vertical"
                android:textColor="@color/text_color" />

            <TextView
                android:id="@+id/text_SaoKeCKItem_Symbol"
                style="@style/Label_Style"
                android:layout_width="0dp"
                android:layout_weight="2.2"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/text_color" />

            <TextView
                android:id="@+id/text_SaoKeCKItem_IncreaseAmount"
                style="@style/Label_Style"
                android:layout_width="0dp"
                android:layout_weight="2.0"
                android:gravity="center"
                android:textColor="@color/color_Mua" />

            <TextView
                android:id="@+id/text_SaoKeCKItem_ReducedAmount"
                style="@style/Label_Style"
                android:layout_width="0dp"
                android:layout_weight="2.0"
                android:gravity="center"
                android:textColor="@color/color_Ban" />

            <TextView
                android:id="@+id/text_SaoKeCKItem_Balance"
                style="@style/Label_Style"
                android:layout_width="0dp"
                android:layout_weight="2.0"
                android:gravity="center" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/listview_separation_color" />

        <TextView
            android:id="@+id/text_SaoKeCKItem_Descriptions"
            style="@style/Label_Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:textStyle="italic"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/listview_separation_color" />

</LinearLayout>