<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.fss.tcbs.mobiletrading"
    android:id="@+id/stockinfo_index"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg_fragment"
    android:orientation="vertical"
    android:paddingLeft="@dimen/m_paddingLeft"
    android:paddingRight="@dimen/m_paddingLeft" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/text_BangGiaCT_TenCty"
                style="@style/Label_Style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5" >

                    <mobiletrading.design.TextViewHightLight
                        android:id="@+id/text_BangGiaCT_GiaKhopCuoi"
                        style="@style/Label_Style"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_alignLeft="@+id/Img_BangGiaCT_KyHieu"
                        android:layout_alignRight="@+id/text_BangGiaCT_Percent"
                        android:gravity="center"
                        android:textSize="30sp" />

                    <ImageView
                        android:id="@+id/Img_BangGiaCT_KyHieu"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignBottom="@+id/text_BangGiaCT_Change"
                        android:layout_alignTop="@+id/text_BangGiaCT_Change"
                        android:scaleType="centerInside" />

                    <mobiletrading.design.TextViewHightLight
                        android:id="@+id/text_BangGiaCT_Change"
                        style="@style/Label_Style"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_below="@+id/text_BangGiaCT_GiaKhopCuoi"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/Img_BangGiaCT_KyHieu"
                        android:gravity="center"
                        android:textSize="14.0sp" />

                    <mobiletrading.design.TextViewHightLight
                        android:id="@+id/text_BangGiaCT_Percent"
                        style="@style/Label_Style"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_below="@+id/text_BangGiaCT_GiaKhopCuoi"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/text_BangGiaCT_Change"
                        android:gravity="center"
                        android:textSize="14.0sp" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/Label_Style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:singleLine="true"
                            android:text="@string/KhoiLuong_2"
                            android:textSize="13sp" />

                        <mobiletrading.design.TextViewHightLight
                            android:id="@+id/text_BangGiaCT_khoiluong"
                            style="@style/Content_Style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:gravity="center_vertical|right"
                            android:paddingLeft="10dp"
                            android:singleLine="true" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/Label_Style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:singleLine="true"
                            android:text="@string/TongKL_2"
                            android:textSize="13sp" />

                        <mobiletrading.design.TextViewHightLight
                            android:id="@+id/text_BangGiaCT_tongkhoiluong"
                            style="@style/Content_Style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:gravity="center_vertical|right"
                            android:paddingLeft="10dp"
                            android:singleLine="true" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/Label_Style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="@string/RoomNuocNgoai"
                            android:textSize="13sp" />

                        <mobiletrading.design.TextViewHightLight
                            android:id="@+id/text_BangGiaCT_foreignRemain"
                            style="@style/Content_Style"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical|right"
                            android:paddingLeft="10dp"
                            android:singleLine="true" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/lc_separation_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:orientation="vertical"
                    android:paddingRight="10dp" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/Label_Style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:singleLine="true"
                            android:text="@string/Tran"
                            android:textSize="13sp" />

                        <mobiletrading.design.TextViewHightLight
                            android:id="@+id/text_BangGiaCT_Tran"
                            style="@style/Content_Style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:gravity="center_vertical|right"
                            android:paddingLeft="10dp"
                            android:singleLine="true"
                            android:textColor="@color/color_Tran" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/Label_Style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="7"
                            android:singleLine="true"
                            android:text="@string/ThamChieu"
                            android:textSize="13sp" />

                        <mobiletrading.design.TextViewHightLight
                            android:id="@+id/text_BangGiaCT_ThamChieu"
                            style="@style/Content_Style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:gravity="center_vertical|right"
                            android:paddingLeft="10dp"
                            android:singleLine="true"
                            android:textColor="@color/color_ThamChieu" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/Label_Style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="7"
                            android:singleLine="true"
                            android:text="@string/San"
                            android:textSize="13sp" />

                        <mobiletrading.design.TextViewHightLight
                            android:id="@+id/text_BangGiaCT_San"
                            style="@style/Content_Style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:gravity="center_vertical|right"
                            android:paddingLeft="10dp"
                            android:singleLine="true"
                            android:textColor="@color/color_San" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/Label_Style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="7"
                            android:singleLine="true"
                            android:text="@string/CaoNhat"
                            android:textSize="13sp" />

                        <mobiletrading.design.TextViewHightLight
                            android:id="@+id/text_BangGiaCT_CaoNhat"
                            style="@style/Content_Style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:gravity="center_vertical|right"
                            android:paddingLeft="10dp"
                            android:singleLine="true" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="gone" >

                        <TextView
                            style="@style/Label_Style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="7"
                            android:singleLine="true"
                            android:text="@string/TrungBinh"
                            android:textSize="13sp" />

                        <mobiletrading.design.TextViewHightLight
                            android:id="@+id/text_stockitem_index_average"
                            style="@style/Content_Style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:gravity="center_vertical|right"
                            android:paddingLeft="10dp"
                            android:singleLine="true" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/Label_Style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="7"
                            android:singleLine="true"
                            android:text="@string/ThapNhat"
                            android:textSize="13sp" />

                        <mobiletrading.design.TextViewHightLight
                            android:id="@+id/text_BangGiaCT_ThapNhat"
                            style="@style/Content_Style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:gravity="center_vertical|right"
                            android:paddingLeft="10dp"
                            android:singleLine="true" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/lc_separation_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/lbl_BangGiaCT_GiaMuaTotNhat"
                    style="@style/Header_Style"
                    android:layout_weight="5"
                    android:gravity="center"
                    android:text="@string/banggiachitiet_lbl_GiaMuaTotNhat"
                    android:textAllCaps="false" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/lc_separation_color" />

                <TextView
                    android:id="@+id/lbl_BangGiaCT_GiaBanTotNhat"
                    style="@style/Header_Style"
                    android:layout_weight="5"
                    android:gravity="center"
                    android:text="@string/banggiachitiet_lbl_GiaBanTotNhat"
                    android:textAllCaps="false" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:id="@+id/lay_stockinfo_index_bid1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:layout_marginTop="3dp"
                        android:background="@color/bid1_background_color"
                        android:paddingRight="10dp" >

                        <Button
                            android:id="@+id/btn_stockitem_index_bid1"
                            android:layout_width="@dimen/button_bidoffer_width"
                            android:layout_height="@dimen/button_bidoffer_height"
                            android:layout_centerVertical="true"
                            android:background="@drawable/background_button_offer_stockinfo"
                            android:text="@string/Ban"
                            android:textColor="@color/text_color"
                            android:textSize="13sp"
                            android:visibility="gone" />

                        <mobiletrading.design.TextViewHightLight
                            android:id="@+id/text_BangGiaCT_BidPrice1"
                            style="@style/Label_Style"
                            android:layout_width="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/btn_stockitem_index_bid1" />

                        <mobiletrading.design.TextViewHightLight
                            android:id="@+id/text_BangGiaCT_Bid1"
                            style="@style/Label_Style"
                            android:layout_width="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/lay_stockinfo_index_bid2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:background="@color/bid2_background_color"
                        android:paddingRight="10dp" >

                        <Button
                            android:id="@+id/btn_stockitem_index_bid2"
                            android:layout_width="@dimen/button_bidoffer_width"
                            android:layout_height="@dimen/button_bidoffer_height"
                            android:layout_centerVertical="true"
                            android:background="@drawable/background_button_offer_stockinfo"
                            android:text="@string/Ban"
                            android:textColor="@color/text_color"
                            android:textSize="13sp"
                            android:visibility="gone" />

                        <mobiletrading.design.TextViewHightLight
                            android:id="@+id/text_BangGiaCT_BidPrice2"
                            style="@style/Label_Style"
                            android:layout_width="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/btn_stockitem_index_bid2" />

                        <mobiletrading.design.TextViewHightLight
                            android:id="@+id/text_BangGiaCT_Bid2"
                            style="@style/Label_Style"
                            android:layout_width="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/lay_stockinfo_index_bid3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:background="@color/bid3_background_color"
                        android:paddingRight="10dp" >

                        <Button
                            android:id="@+id/btn_stockitem_index_bid3"
                            android:layout_width="@dimen/button_bidoffer_width"
                            android:layout_height="@dimen/button_bidoffer_height"
                            android:layout_centerVertical="true"
                            android:background="@drawable/background_button_offer_stockinfo"
                            android:text="@string/Ban"
                            android:textColor="@color/text_color"
                            android:textSize="13sp"
                            android:visibility="gone" />

                        <mobiletrading.design.TextViewHightLight
                            android:id="@+id/text_BangGiaCT_BidPrice3"
                            style="@style/Label_Style"
                            android:layout_width="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/btn_stockitem_index_bid3" />

                        <mobiletrading.design.TextViewHightLight
                            android:id="@+id/text_BangGiaCT_Bid3"
                            style="@style/Label_Style"
                            android:layout_width="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:id="@+id/lay_stockinfo_index_offer1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:layout_marginTop="3dp"
                        android:background="@color/offer1_background_color"
                        android:paddingLeft="10dp" >

                        <mobiletrading.design.TextViewHightLight
                            android:id="@+id/text_BangGiaCT_OfferPrice1"
                            style="@style/Label_Style"
                            android:layout_width="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="0dp" />

                        <mobiletrading.design.TextViewHightLight
                            android:id="@+id/text_BangGiaCT_Offer1"
                            style="@style/Label_Style"
                            android:layout_width="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="0dp" />

                        <Button
                            android:id="@+id/btn_stockitem_index_offer1"
                            android:layout_width="@dimen/button_bidoffer_width"
                            android:layout_height="@dimen/button_bidoffer_height"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/background_button_bid_stockinfo"
                            android:text="@string/Mua"
                            android:textColor="@color/text_color"
                            android:textSize="13sp"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/lay_stockinfo_index_offer2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:background="@color/offer2_background_color"
                        android:paddingLeft="10dp" >

                        <mobiletrading.design.TextViewHightLight
                            android:id="@+id/text_BangGiaCT_OfferPrice2"
                            style="@style/Label_Style"
                            android:layout_width="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="0dp" />

                        <mobiletrading.design.TextViewHightLight
                            android:id="@+id/text_BangGiaCT_Offer2"
                            style="@style/Label_Style"
                            android:layout_width="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="0dp" />

                        <Button
                            android:id="@+id/btn_stockitem_index_offer2"
                            android:layout_width="@dimen/button_bidoffer_width"
                            android:layout_height="@dimen/button_bidoffer_height"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/background_button_bid_stockinfo"
                            android:text="@string/Mua"
                            android:textColor="@color/text_color"
                            android:textSize="13sp"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/lay_stockinfo_index_offer3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:background="@color/offer3_background_color"
                        android:paddingLeft="10dp" >

                        <mobiletrading.design.TextViewHightLight
                            android:id="@+id/text_BangGiaCT_OfferPrice3"
                            style="@style/Label_Style"
                            android:layout_width="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="0dp" />

                        <mobiletrading.design.TextViewHightLight
                            android:id="@+id/text_BangGiaCT_Offer3"
                            style="@style/Label_Style"
                            android:layout_width="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="0dp" />

                        <Button
                            android:id="@+id/btn_stockitem_index_offer3"
                            android:layout_width="@dimen/button_bidoffer_width"
                            android:layout_height="@dimen/button_bidoffer_height"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/background_button_bid_stockinfo"
                            android:text="@string/Mua"
                            android:textColor="@color/text_color"
                            android:textSize="13sp"
                            android:visibility="gone" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/lay_percentBidOff"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/text_bidpercent"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="gone" />

                <View
                    android:id="@+id/view_bidpercent"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/text_offpercent"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="gone" />
            </RelativeLayout>

            <mobiletrading.design.TextViewHightLight
                android:id="@+id/text_BangGiaCT_Average"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>