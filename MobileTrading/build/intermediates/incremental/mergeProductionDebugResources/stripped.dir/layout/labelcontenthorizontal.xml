<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/m_labelcontenthorilayout_height"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/labelcontenthori_label"
            style="@style/Label_Style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_weight="5"
            android:padding="0dp"
            android:singleLine="true" />

        <TextView
            android:id="@+id/labelcontenthori_content"
            style="@style/Content_Style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_weight="5"
            android:gravity="center_vertical|right"
            android:paddingLeft="10dp"
            android:singleLine="true" />

        <EditText
            android:id="@+id/labelcontenthori_content2"
            style="@style/EditText_Style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_weight="6"
            android:gravity="center_vertical|right"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textColorHint="@color/edittext_hint_color"
            android:textCursorDrawable="@drawable/shape_textcursoredittext"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:id="@+id/labelcontenthori_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/lc_separation_color" />

</LinearLayout>