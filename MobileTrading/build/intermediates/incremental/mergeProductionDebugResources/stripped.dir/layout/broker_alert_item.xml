<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/img_brokeralert_item_Right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:background="#00ffffff"
        android:src="@drawable/ic_arrow" />

    <TextView
        android:id="@+id/text_brokeralert_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/img_brokeralert_item_Right"
        android:lines="3"
        android:textColor="@color/color_ThamChieu"
        android:textSize="15.0sp"
         />

    <TextView
        android:id="@+id/text_brokeralert_item_PostDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_brokeralert_item_title"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/img_brokeralert_item_Right"
        android:textColor="@color/color_Ban"
        android:textSize="11.0sp"
         />

</RelativeLayout>