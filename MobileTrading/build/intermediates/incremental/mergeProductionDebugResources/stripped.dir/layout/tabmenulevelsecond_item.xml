<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/m_tabselector_height"
    android:background="@color/header_background_color" >

    <View
        android:id="@+id/line"
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@color/header_separation_color" />

    <TextView
        android:id="@+id/text_tabitem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/line_tabitem"
        android:layout_toLeftOf="@+id/line"
        android:gravity="center"
        android:textColor="@color/text_color"
        android:textSize="@dimen/m_tabselector_text_size" />

    <View
        android:id="@+id/line_tabitem"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true" />

</RelativeLayout>