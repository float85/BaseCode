<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/authorization_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/header_separation_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            style="@style/Header_Style"
            android:layout_weight="3.0"
            android:text="@string/SoCMND"
            android:textAllCaps="false" />

        <View
            android:layout_width="0.3dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/header_separation_color" />

        <TextView
            style="@style/Header_Style"
            android:layout_weight="3.0"
            android:text="@string/TuNgay"
            android:textAllCaps="false" />

        <View
            android:layout_width="0.3dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/header_separation_color" />

        <TextView
            style="@style/Header_Style"
            android:layout_weight="3.0"
            android:text="@string/DenNgay"
            android:textAllCaps="false" />
    </LinearLayout>

    <ListView
        android:id="@+id/listview_authorization_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:divider="@color/listview_separation_color"
        android:paddingLeft="@dimen/m_paddingLeft"
        android:paddingRight="@dimen/m_paddingRight"
        android:scrollbars="none" />

</LinearLayout>