<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <mobiletrading.common.CustomHorizontalScrollView
        android:id="@+id/horiscrollview_banggia_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:fillViewport="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/layout_banggia_item_content"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/text_banggia_item_contentwidth"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />

                <LinearLayout
                    android:id="@+id/lay_banggia_item_content"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/m_paddingLeft"
                    android:paddingRight="@dimen/m_paddingRight" >

                    <TextView
                        android:id="@+id/text_BangGia_item_Symbol"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2.5"
                        android:gravity="left|center_vertical"
                        android:singleLine="true"
                        android:textColor="@color/text_color"
                        android:textSize="18.0sp"
                         />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2.0"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/text_BangGia_item_Change"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15.0sp" />

                        <ImageView
                            android:id="@+id/Img_BangGia_item_KyHieu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="center" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2.0"
                        android:gravity="center_vertical|right"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/text_BangGia_item_ClosePrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20.0sp"
                             />

                        <TextView
                            android:id="@+id/text_BangGia_item_Percent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15.0sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_weight="2.0"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/text_BangGia_item_Tran"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:textColor="@color/color_Tran"
                            android:textSize="18.0sp" />

                        <TextView
                            android:id="@+id/text_BangGia_item_San"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:textColor="@color/color_San"
                            android:textSize="18.0sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btn_banggia_item_cancel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#FF9966"
                android:padding="0dp"
                android:text="@string/Cancel"
                android:textColor="@color/text_color"
                 />
        </LinearLayout>
    </mobiletrading.common.CustomHorizontalScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/lc_separation_color" />

</LinearLayout>