<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.fss.tcbs.mobiletrading"
    android:id="@+id/internalcashtransfer_detail"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg_fragment"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:paddingLeft="@dimen/m_paddingLeft"
    android:paddingRight="@dimen/m_paddingRight">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <mobiletrading.design.LabelContentLayout
                android:id="@+id/lc_CTin_chitiet_TieuKhoan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentgravity="left"
                app:labelText="@string/TieuKhoanChuyen"
                app:labelweight="5"
                app:orientation="horizontal"
                app:setTextStyle="normal" />

            <mobiletrading.design.LabelContentLayout
                android:id="@+id/text_CTin_chitiet_NguoiNhan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentgravity="left"
                app:labelText="@string/TenNguoiNhan"
                app:labelweight="5"
                app:orientation="horizontal"
                app:singleLine="true" />

            <mobiletrading.design.LabelContentLayout
                android:id="@+id/text_CTin_chitiet_SoTKNhan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentgravity="left"
                app:labelText="@string/TieuKhoanNhan"
                app:labelweight="5"
                app:orientation="horizontal"
                app:singleLine="true" />

            <mobiletrading.design.LabelContentLayout
                android:id="@+id/text_CTin_chitiet_SoLuuKy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentgravity="left"
                app:labelText="@string/SoLuuKyNhan"
                app:labelweight="5"
                app:orientation="horizontal"
                app:singleLine="true" />

            <TextView
                style="@style/Content_Style"
                android:layout_width="match_parent"
                android:layout_height="@dimen/m_labelcontenthorilayout_height"
                android:background="@color/header_background_color"
                android:text="@string/chi_tiet"
                android:textSize="20dp"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/header_separation_color" />

            <mobiletrading.design.LabelContentLayout
                android:id="@+id/text_CTin_chitiet_SoDu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentgravity="left"
                app:labelText="@string/SoDuTienVND"
                app:labelweight="5"
                app:orientation="horizontal"
                app:singleLine="true" />

            <mobiletrading.design.LabelContentLayout
                android:id="@+id/text_CTin_chitiet_SoTienChuyen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentgravity="left"
                app:labelText="@string/SoTienChuyenVND"
                app:labelweight="5"
                app:orientation="horizontal"
                app:setTextStyle="bold"
                app:singleLine="true" />

            <mobiletrading.design.LabelContentLayout
                android:id="@+id/text_CTin_chitiet_PhiChuyenTien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentgravity="left"
                app:labelText="@string/PhiNThue"
                app:labelweight="5"
                app:orientation="horizontal"
                app:setTextStyle="bold"
                app:singleLine="true" />

            <mobiletrading.design.LabelContentLayout
                android:id="@+id/text_CTin_chitiet_TongTien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentgravity="left"
                app:labelText="@string/TongTienVND"
                app:labelweight="5"
                app:orientation="horizontal"
                app:setTextStyle="bold"
                app:singleLine="true" />

            <mobiletrading.design.LabelContentLayout
                android:id="@+id/text_CTin_chitiet_NoiDung"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentgravity="left"
                app:labelText="@string/NoiDung"
                app:labelweight="5"
                app:orientation="horizontal"
                app:singleLine="true" />

            <mobiletrading.design.LabelContentLayout
                android:id="@+id/edt_CTin_chitiet_tradingcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentColor="@color/text_color"
                app:contentHint="@string/MaXacThuc"
                app:contentgravity="left"
                app:editable="true"
                app:inputType="textPassword"
                app:labelText="@string/MaXacThuc"
                app:labelweight="5"
                app:orientation="horizontal"
                app:singleLine="true" />

            <RelativeLayout
                android:id="@+id/vOTPCash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <mobiletrading.design.LabelContentLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:labelText="@string/NhapMaXacThuc"
                    app:orientation="horizontal" />

                <EditText
                    android:id="@+id/etSaveOTPCash"
                    style="@style/EditText_Style"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="#FFFFFF"
                    android:hint="@string/NhapOTP"
                    android:paddingLeft="5dp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_CTin_chitiet_Accept"
                    style="@style/Button_Background1"
                    android:text="@string/XacNhan" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>