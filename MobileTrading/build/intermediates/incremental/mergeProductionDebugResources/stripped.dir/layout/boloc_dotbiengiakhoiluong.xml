<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/boloc_dotbiengia"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg_fragment"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <Spinner
            android:id="@+id/spn_bolocgiakhoiluong"
            style="@style/EditText_Style"
            android:layout_width="fill_parent"
            android:layout_margin="5dp"
            android:layout_marginBottom="5dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/lbl_bolocgiakhoiluong_GiaDotBien"
                style="@style/Label_Style"
                android:text="@string/dotbiengia_kl_lbl_GiaDotBien" />

            <Spinner
                android:id="@+id/spn_bolocgiakhoiluong_GiaDotBien"
                style="@style/EditText_Style"
                android:layout_width="150dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/lbl_bolocgiakhoiluong_DotBienTrong"
                style="@style/Label_Style"
                android:text="@string/dotbienkhoiluong_lbl_DotBienTrong" />

            <Spinner
                android:id="@+id/spn_bolocgiakhoiluong_DotBienTrong"
                style="@style/EditText_Style"
                android:layout_width="150dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/lbl_bolocgiakhoiluong_TyLeDB"
                style="@style/Label_Style"
                android:text="@string/dotbienkhoiluong_lbl_TyleDB" />

            <Spinner
                android:id="@+id/spn_bolocgiakhoiluong_TyLeDB"
                style="@style/EditText_Style"
                android:layout_width="150dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/lbl_bolocgiakhoiluong_KLDotBien"
                style="@style/Label_Style"
                android:text="@string/dotbienkhoiluong_lbl_KhoiLuongDB" />

            <Spinner
                android:id="@+id/spn_bolocgiakhoiluong_KLDotBien"
                style="@style/EditText_Style"
                android:layout_width="150dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/text_bolocgiakhoiluong_Desc"
            style="@style/Label_Style"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp" />

        <Button
            android:id="@+id/btn_bolocgiakhoiluong_CapNhat"
            style="@style/Button_Background1"
            android:layout_width="fill_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:text="@string/cap_nhat" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                style="@style/Label_Style"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:background="@drawable/button_not_select2"
                android:singleLine="true"
                android:text="@string/MaCK" />

            <TextView
                style="@style/Label_Style"
                android:layout_width="0dp"
                android:layout_weight="2.5"
                android:background="@drawable/button_not_select2"
                android:singleLine="true"
                android:text="@string/GiaKhopCuoi" />

            <TextView
                style="@style/Label_Style"
                android:layout_width="0dp"
                android:layout_weight="2.5"
                android:background="@drawable/button_not_select2"
                android:singleLine="true"
                android:text="@string/dotbienkhoiluong_lbl_KLGDTB" />

            <TextView
                style="@style/Label_Style"
                android:layout_width="0dp"
                android:layout_weight="3.0"
                android:background="@drawable/button_not_select2"
                android:singleLine="true"
                android:text="@string/dotbienkhoiluong_lbl_TongKLGD" />
        </LinearLayout>

        <ListView
            android:id="@+id/listview_bolocgiakhoiluong"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:divider="@color/listview_separation_color" android:scrollbars="none" />
    </LinearLayout>

</LinearLayout>