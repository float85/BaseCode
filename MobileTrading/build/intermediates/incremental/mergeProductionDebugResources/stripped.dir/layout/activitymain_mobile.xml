<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activitymain_mobile"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg_fragment"
    android:orientation="vertical">

    <android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/kboardhook">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.fss.tcbs.mobiletrading.MyActionBar
                android:id="@+id/actionbar"
                style="@style/ActionBar" />

            <LinearLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"></LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/m_slidemenu_width"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/header_height"
                android:background="@drawable/actionbar_background"
                android:paddingLeft="10dp">

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="@dimen/m_slidemenu_logo_width"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="15dp"
                    android:scaleType="fitStart"
                    android:src="@drawable/ic_logo"/>

                <ImageButton
                    android:id="@+id/btn_slidemenu_logout"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="3dp"
                    android:background="@color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_logout_mobile"/>
            </RelativeLayout>

            <customwidget.slidemenu.SlideMenu
                android:id="@+id/mainactivity_slidermenu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></customwidget.slidemenu.SlideMenu>
        </LinearLayout>
    </android.support.v4.widget.DrawerLayout>

    <mobiletrading.keyboard.KeyboardHook
        android:id="@+id/kboardhook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/activitymain_kboardsymbol"
        android:visibility="gone" />

    <customwidget.keyboardhook.KeyboardHookNew
        android:id="@+id/keyboardhooknew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/activitymain_kboardsymbol"
        android:visibility="gone" />

    <mobiletrading.keyboard.KBoardSymbol
        android:id="@+id/activitymain_kboardsymbol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/activitymain_kboardsymbol_price"
        android:layout_alignParentBottom="true"
        android:visibility="gone"></mobiletrading.keyboard.KBoardSymbol>

    <mobiletrading.keyboard.KBoardPrice
        android:id="@+id/activitymain_kboardsymbol_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/activitymain_kboardsymbol_quantity"
        android:layout_alignParentBottom="true"
        android:visibility="gone"></mobiletrading.keyboard.KBoardPrice>

    <mobiletrading.keyboard.KBoardQuantity
        android:id="@+id/activitymain_kboardsymbol_quantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lay_footer"
        android:layout_alignParentBottom="true"
        android:visibility="gone"></mobiletrading.keyboard.KBoardQuantity>

    <LinearLayout
        android:id="@+id/lay_footer"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/footer_height"
        android:layout_alignParentBottom="true"
        android:background="@color/footer_background_color"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <RelativeLayout
            android:id="@+id/lay_activitymain_asset"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2">

            <ImageButton
                android:id="@+id/btn_activitymain_asset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/lbl_activitymain_asset"
                android:layout_marginBottom="5dp"
                android:background="#00ffffff"
                android:clickable="false"
                android:padding="0dp"
                android:scaleType="fitCenter"
                android:src="@drawable/bottombar_menu_asset" />

            <TextView
                android:id="@+id/lbl_activitymain_asset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:lines="1"
                android:text="@string/TaiSan"
                android:textColor="@color/grey_text"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lay_activitymain_placeorder"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2">

            <ImageButton
                android:id="@+id/btn_activitymain_placeorder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/lbl_activitymain_placeorder"
                android:layout_marginBottom="5dp"
                android:background="#00ffffff"
                android:clickable="false"
                android:padding="0dp"
                android:scaleType="fitCenter"
                android:src="@drawable/bottom_menu_datlenh" />

            <TextView
                android:id="@+id/lbl_activitymain_placeorder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:lines="1"
                android:text="@string/Trade"
                android:textColor="@color/grey_text"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lay_activitymain_watchlist"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2">

            <ImageButton
                android:id="@+id/btn_activitymain_watchlist"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/lbl_activitymain_watchlist"
                android:layout_marginBottom="5dp"
                android:background="#00ffffff"
                android:clickable="false"
                android:padding="0dp"
                android:scaleType="fitCenter"
                android:src="@drawable/bottombar_menu_banggia" />

            <TextView
                android:id="@+id/lbl_activitymain_watchlist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:lines="1"
                android:text="@string/WatchList"
                android:textColor="@color/grey_text"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lay_activitymain_orderlist"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2">

            <ImageButton
                android:id="@+id/btn_activitymain_orderlist"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/lbl_activitymain_orderlist"
                android:layout_marginBottom="5dp"
                android:background="#00ffffff"
                android:clickable="false"
                android:padding="0dp"
                android:scaleType="fitCenter"
                android:src="@drawable/bottombar_menu_orderlist" />

            <TextView
                android:id="@+id/lbl_activitymain_orderlist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:lines="1"
                android:text="@string/OrderList"
                android:textColor="@color/grey_text"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lay_activitymain_notify"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2">

            <ImageButton
                android:id="@+id/btn_activitymain_notify"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/lbl_activitymain_notify"
                android:layout_marginBottom="5dp"
                android:background="#00ffffff"
                android:clickable="false"
                android:padding="0dp"
                android:scaleType="fitCenter"
                android:src="@drawable/bottombar_menu_notify" />

            <TextView
                android:id="@+id/lbl_activitymain_notify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:lines="1"
                android:text="@string/Notification"
                android:textColor="@color/grey_text"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/text_activitymain_notifycounter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:background="@drawable/bg_countnotifyunread"
                android:gravity="center"
                android:textColor="@color/text_color"
                android:textSize="12sp"
                android:visibility="gone" />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>