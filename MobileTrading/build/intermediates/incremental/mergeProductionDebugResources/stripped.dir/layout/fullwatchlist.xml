<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.fss.tcbs.mobiletrading"
    android:id="@+id/fullwatchlist"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg_fragment"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <mobiletrading.design.SearchStockUI
        android:id="@+id/searchtext_fullwatchlist_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/listview_separation_color" />

    <customwidget.tabselector.TabSelector
        android:id="@+id/tab_fullwatchlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <customwidget.tabselector.TabItem
            android:id="@+id/tab_fullwatchlist_all"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.0"
            android:gravity="center"
            app:textTabItem="@string/solenh_label_All" />

        <customwidget.tabselector.TabItem
            android:id="@+id/tab_fullwatchlist_hose"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.0"
            android:gravity="center"
            app:textTabItem="@string/banggia_lbl_10" />

        <customwidget.tabselector.TabItem
            android:id="@+id/tab_fullwatchlist_hnx"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.0"
            android:gravity="center"
            app:textTabItem="@string/banggia_lbl_02" />

        <customwidget.tabselector.TabItem
            android:id="@+id/tab_fullwatchlist_upcom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.0"
            android:gravity="center"
            app:textTabItem="@string/banggia_lbl_04" />
    </customwidget.tabselector.TabSelector>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/header_separation_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal" >

        <TextView
            style="@style/Header_Style"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:text="@string/MaCK" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/header_separation_color" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.0"
            android:orientation="vertical" >

            <TextView
                style="@style/Header_Style"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:text="@string/Gia" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@color/header_separation_color" />

            <TextView
                style="@style/Header_Style"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:text="@string/banggia_change" />
        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/header_separation_color" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:orientation="vertical" >

            <TextView
                style="@style/Header_Style"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:text="@string/KL" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@color/header_separation_color" />

            <TextView
                style="@style/Header_Style"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:text="@string/TongKL_2" />
        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/header_separation_color" />

        <LinearLayout
            android:id="@+id/lay_banggiafull_bidoff"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.5"
            android:orientation="vertical" >

            <RelativeLayout
                style="@style/Header_Style"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5" >

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_changeheader" />

                <TextView
                    android:id="@+id/header_fullwatchlist_bid"
                    style="@style/Header_Style"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    android:text="@string/banggia_MuaGia1KL1" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@color/header_separation_color" />

            <RelativeLayout
                style="@style/Header_Style"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5" >

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_changeheader"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/header_fullwatchlist_off"
                    style="@style/Header_Style"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    android:text="@string/banggia_BanGia1KL1" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/header_background_color" />

    <ListView
        android:id="@+id/listview_banggiafull"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:divider="@color/listview_separation_color"
        android:scrollbars="none"
        android:visibility="gone" />

    <customwidget.viewpager.NonSwipeableViewPager
        android:id="@+id/viewpager_watchlist"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>