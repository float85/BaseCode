<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.fss.tcbs.mobiletrading"
    android:id="@+id/confirm_order_dialog_details"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg_fragment"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <mobiletrading.design.LabelContentLayout
                android:id="@+id/text_confirmorderdetails_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:labelText="@string/Ngay" />

            <mobiletrading.design.LabelContentLayout
                android:id="@+id/text_confirmorderdetails_afacctno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:labelText="@string/TieuKhoan" />

            <mobiletrading.design.LabelContentLayout
                android:id="@+id/text_confirmorderdetails_symbol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:labelText="@string/MaCK" />

            <mobiletrading.design.LabelContentLayout
                android:id="@+id/text_confirmorderdetails_market"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:labelText="@string/ThiTruong" />

            <mobiletrading.design.LabelContentLayout
                android:id="@+id/text_confirmorderdetails_buysell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:labelText="@string/Mua_Ban" />

            <mobiletrading.design.LabelContentLayout
                android:id="@+id/text_confirmorderdetails_ordertype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:labelText="@string/LoaiLenh" />

            <mobiletrading.design.LabelContentLayout
                android:id="@+id/text_confirmorderdetails_trademethod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:labelText="@string/KenhGiaoDich" />

            <mobiletrading.design.LabelContentLayout
                android:id="@+id/text_confirmorderdetails_quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:labelText="@string/KhoiLuong" />

            <mobiletrading.design.LabelContentLayout
                android:id="@+id/text_confirmorderdetails_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:labelText="@string/Gia" />

            <mobiletrading.design.LabelContentLayout
                android:id="@+id/text_confirmorderdetails_orderid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:labelText="@string/SoHieuLenh" />

            <mobiletrading.design.LabelContentLayout
                android:id="@+id/edt_confirmorderdetails_pin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/m_labelcontentverlayout_height"
                android:inputType="textPassword"
                app:contentHint="@string/chuyentiennoibo_hint_MaPin"
                app:editable="true"
                app:labelText="@string/chuyentiennoibo_hint_MaPin"
                app:orientation="vertical" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="9.0" >

                <Button
                    android:id="@+id/btn_confirmorderdetails_accept"
                    style="@style/Button_Background1"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="9dp"
                    android:layout_weight="3.0"
                    android:text="@string/XacNhan" />

                <Button
                    android:id="@+id/btn_confirmorderdetails_cancel"
                    style="@style/Button_Background1"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="9dp"
                    android:layout_weight="3.0"
                    android:text="@string/Cancel" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>