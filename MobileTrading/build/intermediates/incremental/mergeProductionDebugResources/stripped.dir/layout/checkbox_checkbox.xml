<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/img_checkbox_image"
        android:layout_width="@dimen/checkboximage_width"
        android:layout_height="@dimen/checkboximage_height"
        android:layout_marginRight="5dp"
        android:background="@android:color/transparent" />

    <TextView
        android:id="@+id/tv_checkbox_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#3f3f3f"
        android:textSize="@dimen/checkboxlabel_textsize" />

</LinearLayout>