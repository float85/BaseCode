<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/text_sequence"
        style="@style/Content_Style"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:gravity="center" />

    <TextView
        android:id="@+id/text_dkqm_item_MaCK"
        style="@style/Content_Style"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center" />

    <TextView
        android:id="@+id/text_dkqm_item_SoLuong"
        style="@style/Content_Style"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center" />

    <TextView
        android:id="@+id/text_dkqm_item_SoLuongDaDK"
        style="@style/Content_Style"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center" />

    <TextView
        android:id="@+id/text_dkqm_item_Giamua"
        style="@style/Content_Style"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center" />

    <TextView
        android:id="@+id/text_dkqm_item_Sotienmua"
        style="@style/Content_Style"
        android:layout_width="0dp"
        android:layout_weight="1.5"
        android:gravity="center" />

    <Button
        android:id="@+id/text_dkqm_item_dangky"
        style="@style/Content_Style"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:background="@color/transparent"
        android:gravity="center"
        android:textColor="@color/green_text" />

    <Button
        android:id="@+id/text_dkqm_item_info"
        style="@style/Content_Style"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:background="@color/transparent"
        android:gravity="center"
        android:text="@string/Xem"
        android:textColor="@color/red_brown_text" />

</LinearLayout>