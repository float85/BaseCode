<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingLeft="@dimen/m_paddingLeft"
    android:paddingRight="@dimen/m_paddingRight"
    android:paddingTop="10dp" >

    <TextView
        android:id="@+id/text_SaoKeCKItem_Date"
        style="@style/Content_Style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/text_SaoKeCKItem_Symbol"
        style="@style/Content_Style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/text_SaoKeCKItem_Descriptions"
        style="@style/Content_Style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:gravity="left"
        android:textSize="@dimen/t_textsize_listviewitem" />

    <TextView
        android:id="@+id/text_SaoKeCKItem_IncreaseAmount"
        style="@style/Content_Style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="right"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:textColor="@color/color_Mua"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/text_SaoKeCKItem_ReducedAmount"
        style="@style/Content_Style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="right"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:textColor="@color/color_Ban"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/text_SaoKeCKItem_Balance"
        style="@style/Content_Style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="right"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:textSize="14sp" />

</LinearLayout>