<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.fss.tcbs.mobiletrading"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg_fragment"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/header_background_color" >

        <customwidget.tabselector.TabSelector
            android:id="@+id/tab_gtcorderlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/searchtext_gtcorderlist_all"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/searchtext_gtcorderlist_all"
            android:orientation="horizontal" >

            <customwidget.tabselector.TabItem
                android:id="@+id/tab_gtcorderlist_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                app:textTabItem="@string/solenh_label_All" />

            <customwidget.tabselector.TabItem
                android:id="@+id/tab_gtcorderlist_receiving"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                app:textTabItem="@string/Cho" />

            <customwidget.tabselector.TabItem
                android:id="@+id/tab_gtcorderlist_matched"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                app:textTabItem="@string/HoatDong" />

            <customwidget.tabselector.TabItem
                android:id="@+id/tab_gtcorderlist_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                app:textTabItem="@string/Cancel" />
        </customwidget.tabselector.TabSelector>

        <mobiletrading.design.SearchTextUI
            android:id="@+id/searchtext_gtcorderlist_all"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/header_separation_color" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/t_header_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/text_gtcorderlist_cancelAll"
                style="@style/Header_Style"
                android:layout_weight="1"
                android:background="@drawable/t_header_bg_lineright"
                android:textSize="@dimen/normalorderlist_headertextsize" />

            <TextView
                style="@style/Header_Style"
                android:layout_height="wrap_content"
                android:layout_weight="2.0"
                android:background="@drawable/t_header_bg_lineright"
                android:maxLines="2"
                android:singleLine="false"
                android:text="@string/SoLuuKy"
                android:textSize="@dimen/normalorderlist_headertextsize" />

            <TextView
                style="@style/Header_Style"
                android:layout_height="wrap_content"
                android:layout_weight="2.0"
                android:background="@drawable/t_header_bg_lineright"
                android:maxLines="2"
                android:singleLine="false"
                android:text="@string/TieuKhoan"
                android:textSize="@dimen/normalorderlist_headertextsize" />

            <TextView
                style="@style/Header_Style"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/t_header_bg_lineright"
                android:maxLines="2"
                android:singleLine="false"
                android:text="@string/Mua_Ban"
                android:textSize="@dimen/normalorderlist_headertextsize" />

            <TextView
                style="@style/Header_Style"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/t_header_bg_lineright"
                android:maxLines="2"
                android:singleLine="false"
                android:text="@string/MaCK2"
                android:textSize="@dimen/normalorderlist_headertextsize" />

            <TextView
                style="@style/Header_Style"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:background="@drawable/t_header_bg_lineright"
                android:maxLines="2"
                android:singleLine="false"
                android:text="@string/KLDat"
                android:textSize="@dimen/normalorderlist_headertextsize" />

            <TextView
                style="@style/Header_Style"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/t_header_bg_lineright"
                android:maxLines="2"
                android:singleLine="false"
                android:text="@string/GiaDat"
                android:textSize="@dimen/normalorderlist_headertextsize" />

            <TextView
                style="@style/Header_Style"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:background="@drawable/t_header_bg_lineright"
                android:maxLines="2"
                android:singleLine="false"
                android:text="@string/KLKhop"
                android:textSize="@dimen/normalorderlist_headertextsize" />

            <TextView
                style="@style/Header_Style"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:background="@drawable/t_header_bg_lineright"
                android:maxLines="2"
                android:singleLine="false"
                android:text="@string/ConLai"
                android:textSize="@dimen/normalorderlist_headertextsize" />

            <TextView
                style="@style/Header_Style"
                android:layout_height="wrap_content"
                android:layout_weight="2.0"
                android:background="@drawable/t_header_bg_lineright"
                android:maxLines="2"
                android:singleLine="false"
                android:text="@string/TuNgay"
                android:textSize="@dimen/normalorderlist_headertextsize" />

            <TextView
                style="@style/Header_Style"
                android:layout_height="wrap_content"
                android:layout_weight="2.0"
                android:background="@drawable/t_header_bg_lineright"
                android:maxLines="2"
                android:singleLine="false"
                android:text="@string/DenNgay"
                android:textSize="@dimen/normalorderlist_headertextsize" />

            <TextView
                style="@style/Header_Style"
                android:layout_height="wrap_content"
                android:layout_weight="2.0"
                android:background="@drawable/t_header_bg_lineright"
                android:maxLines="2"
                android:singleLine="false"
                android:text="@string/TrangThai"
                android:textSize="@dimen/normalorderlist_headertextsize" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/header_separation_color" />

        <customwidget.viewpager.NonSwipeableViewPager
            android:id="@+id/viewpager_gtcorderlist"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- <ListView -->
        <!-- android:id="@+id/listview_solenhgtc" -->
        <!-- android:layout_width="fill_parent" -->
        <!-- android:layout_height="wrap_content" -->
        <!-- android:divider="@color/listview_separation_color" -->
        <!-- android:scrollbars="none" /> -->
    </LinearLayout>

</LinearLayout>