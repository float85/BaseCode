        <mobiletrading.design.LabelContentLayout
            android:id="@+id/text_DKQM_chitiet_SoDu"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.6"
            android:visibility="gone"
            app:contentColor="@color/text_color"
            app:contentgravity="center"
            app:labelText="@string/SoDu"
            app:separationColor="@color/transparent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/header_separation_color"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.6"
            android:background="@drawable/bg_black_conner3_262630"
            android:gravity="center_vertical">

            <mobiletrading.design.LabelContentLayout
                android:id="@+id/edt_DKQM_chitiet_SLMua"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:contentColor="@color/text_color"
                app:contentHint="@string/SoLuongMua2"
                app:contentgravity="center"
                app:digits="0123456789,"
                app:editable="true"
                app:inputType="number"
                app:labelText="@string/SoLuongMua"
                app:orientation="horizontal"
                app:separationColor="@color/transparent"
                app:singleLine="true" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/header_separation_color" />

        <mobiletrading.design.LabelContentLayout
            android:id="@+id/text_DKQM_chitiet_TongTien"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.6"
            app:contentColor="@color/text_color"
            app:contentgravity="center"
            app:labelText="@string/TongTien"
            app:separationColor="@color/transparent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/header_separation_color" />

        <LinearLayout
            android:id="@+id/vOTPRightOff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:visibility="gone"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_authentication"
                style="@style/Label_Style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:text="@string/RoRPolicy"
                android:textColor="@color/red_brown_text"
                android:visibility="visible" />

            <mobiletrading.design.LabelContentLayout
                android:id="@+id/edt_DKQM_chitiet_tradingcode"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="#ededed"
                android:paddingLeft="5dp"
                android:visibility="visible"
                app:contentColor="@color/text_color"
                app:contentgravity="left"
                app:editable="true"
                app:inputType="textPassword"
                app:labelweight="0"
                app:separationColor="@color/transparent" />
        </LinearLayout>

