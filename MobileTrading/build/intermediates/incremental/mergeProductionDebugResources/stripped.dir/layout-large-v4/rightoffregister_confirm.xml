        android:padding="@dimen/t_padding_content">

        <mobiletrading.design.LabelContentLayout
            android:id="@+id/text_DKQM_chitiet_MaCK"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.6"
