<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.fss.tcbs.mobiletrading"
    android:id="@+id/chuyenkhoan_chungkhoan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_fragment"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/t_padding_content" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/t_cashtransfer_frame_height"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <mobiletrading.design.MySpinner
                android:id="@+id/spn_ChuyenKhoanCK_senderafacctno"
                android:layout_width="@dimen/t_cashtransfer_frame_width"
                android:layout_height="@dimen/t_cashtransfer_frame_content"
                app:contentsize_dimen="@dimen/t_cashtransfer_contenttextsize"
                app:hasLabel="true"
                app:labelsize_dimen="@dimen/t_cashtransfer_labletextsize"
                app:textMySpinner="@string/TieuKhoanChuyen" >
            </mobiletrading.design.MySpinner>

            <mobiletrading.design.MySpinner
                android:id="@+id/spn_ChuyenKhoanCK_TKNhan"
                android:layout_width="@dimen/t_cashtransfer_frame_width"
                android:layout_height="@dimen/t_cashtransfer_frame_content"
                android:layout_marginLeft="@dimen/t_cashtransfer_frame_marginLeft"
                app:contentsize_dimen="@dimen/t_cashtransfer_contenttextsize"
                app:hasLabel="true"
                app:labelsize_dimen="@dimen/t_cashtransfer_labletextsize"
                app:textMySpinner="@string/chuyenkhoanck_label_TKNhan" />

            <mobiletrading.design.MySpinner
                android:id="@+id/spn_ChuyenKhoanCK_MaCK"
                android:layout_width="@dimen/t_cashtransfer_frame_width"
                android:layout_height="@dimen/t_cashtransfer_frame_content"
                android:layout_marginLeft="@dimen/t_cashtransfer_frame_marginLeft"
                app:contentsize_dimen="@dimen/t_cashtransfer_contenttextsize"
                app:hasLabel="true"
                app:labelsize_dimen="@dimen/t_cashtransfer_labletextsize"
                app:textMySpinner="@string/MaChungKhoan" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/t_cashtransfer_frame_height"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <mobiletrading.design.LabelContentLayout
                android:id="@+id/text_ChuyenKhoanCK_HienCo"
                android:layout_width="@dimen/t_cashtransfer_frame_width"
                android:layout_height="@dimen/t_cashtransfer_frame_content"
                app:contentsize_dimen="@dimen/t_cashtransfer_contenttextsize"
                app:labelText="@string/SLCoTheChuyen"
                app:labelsize_dimen="@dimen/t_cashtransfer_labletextsize"
                app:orientation="vertical" />

            <mobiletrading.design.LabelContentLayout
                android:id="@+id/edt_ChuyenKhoanCK_SoLuong"
                android:layout_width="@dimen/t_cashtransfer_frame_width"
                android:layout_height="@dimen/t_cashtransfer_frame_content"
                android:layout_marginLeft="@dimen/t_cashtransfer_frame_marginLeft"
                app:contentColor="@color/text_color"
                app:contentHint="@string/SoLuongChuyen"
                app:contentsize_dimen="@dimen/t_cashtransfer_contenttextsize"
                app:digits="0123456789.,"
                app:editable="true"
                app:inputType="number"
                app:labelText="@string/SoLuongChuyen"
                app:labelsize_dimen="@dimen/t_cashtransfer_labletextsize"
                app:orientation="vertical" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/t_cashtransfer_frame_height"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_ChuyenKhoanCK_ChapNhan"
                style="@style/Button_Background1"
                android:layout_width="@dimen/t_cashtransfer_frame_width"
                android:text="@string/XacNhan" />

            <Button
                android:id="@+id/btn_ChuyenKhoanCK_Clear"
                style="@style/Button_Background1"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:text="@string/Clear"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>