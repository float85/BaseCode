<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.fss.tcbs.mobiletrading"
    android:layout_width="fill_parent"
    android:id="@+id/stocktransfer_confirm"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        style="@style/Content_Style"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:gravity="center"
        android:text="@string/StockTransferConfirm"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/header_separation_color" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/m_paddingLeft"
        android:paddingRight="@dimen/m_paddingRight" >

        <mobiletrading.design.LabelContentLayout
            android:id="@+id/text_ChuyenKhoanCKInfo_TKChuyen"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:labelText="@string/TieuKhoanNguon"
            app:separationColor="@color/transparent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/header_separation_color" />

        <mobiletrading.design.LabelContentLayout
            android:id="@+id/text_ChuyenKhoanCKInfo_TKNhan"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:labelText="@string/chuyenkhoanck_label_TKNhan"
            app:separationColor="@color/transparent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/header_separation_color" />

        <mobiletrading.design.LabelContentLayout
            android:id="@+id/text_ChuyenKhoanCKInfo_MaCK"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:labelText="@string/MaChungKhoan"
            app:separationColor="@color/transparent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/header_separation_color" />

        <mobiletrading.design.LabelContentLayout
            android:id="@+id/text_ChuyenKhoanCKInfo_HienCo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:labelText="@string/KhoiLuongHienCo"
            app:labelweight="5"
            app:separationColor="@color/transparent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/header_separation_color" />

        <mobiletrading.design.LabelContentLayout
            android:id="@+id/text_ChuyenKhoanCKInfo_SoLuong"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:labelText="@string/KhoiLuongChuyen"
            app:labelweight="5"
            app:separationColor="@color/transparent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/header_separation_color" />

        <RelativeLayout
            android:id="@+id/vOTPStockTranfer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <mobiletrading.design.LabelContentLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:labelText="@string/NhapMaXacThuc"
                app:orientation="horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1" />

                <EditText
                    android:id="@+id/etSaveOTPStockTranfer"
                    style="@style/EditText_Style"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:hint="@string/NhapOTP"
                    android:paddingLeft="5dp" />
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_ChuyenKhoanCKInfo_ChapNhan"
                style="@style/Button_Background1"
                android:layout_width="@dimen/t_button_width"
                android:text="@string/XacNhan" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>