<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingTop="10dp" >

    <TextView
        android:id="@+id/text_coporateaction_item_symbol"
        style="@style/Content_Style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center" />

    <TextView
        android:id="@+id/text_coporateaction_item_eventtype"
        style="@style/Content_Style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="center"
        android:textSize="@dimen/t_textsize_listviewitem" />

    <TextView
        android:id="@+id/text_coporateaction_item_closedate"
        style="@style/Content_Style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:textSize="@dimen/t_textsize_listviewitem" />

    <TextView
        android:id="@+id/text_soluongchungkhoansohuu"
        style="@style/Content_Style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:textSize="@dimen/t_textsize_listviewitem" />

    <TextView
        android:id="@+id/text_tyle"
        style="@style/Content_Style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="@dimen/t_textsize_listviewitem" />

    <TextView
        android:id="@+id/text_soluongchungkhoanchove"
        style="@style/Content_Style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:textSize="@dimen/t_textsize_listviewitem" />

    <TextView
        android:id="@+id/text_sotienchove"
        style="@style/Content_Style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:textSize="@dimen/t_textsize_listviewitem" />

    <TextView
        android:id="@+id/text_ngaythuchien"
        style="@style/Content_Style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:textSize="@dimen/t_textsize_listviewitem" />

    <TextView
        android:id="@+id/text_coporateaction_item_status"
        style="@style/Content_Style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="center"
        android:textSize="@dimen/t_textsize_listviewitem" />

</LinearLayout>