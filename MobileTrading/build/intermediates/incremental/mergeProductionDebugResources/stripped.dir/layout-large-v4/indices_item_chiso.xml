<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/indices_item_chiso"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/t_market_indices_height"
    android:background="@color/bg_fragment"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:paddingTop="5dp" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/text_indices_item_marketindex" >

            <ImageView
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_bg_index" />

            <TextView
                android:id="@+id/text_indexname"
                style="@style/Label_Style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="#3982EB"
                android:textSize="@dimen/t_cashtransfer_contenttextsize" />
        </RelativeLayout>

        <mobiletrading.design.TextViewHightLight
            android:id="@+id/text_indices_item_marketindex"
            style="@style/Content_Style"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/text_color"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_indices_item_marketname"
            style="@style/Content_Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_indices_item_marketindex"
            android:textSize="@dimen/t_cashtransfer_contenttextsize" />

        <TextView
            android:id="@+id/text_indices_item_marketstatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/text_indices_item_marketname"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/text_indices_item_marketname"
            android:singleLine="true"
            android:textColor="@color/green_text" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/text_indices_item_marketindex"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/text_indices_item_kyhieu"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="5dp"
                android:scaleType="fitCenter" />

            <mobiletrading.design.TextViewHightLight
                android:id="@+id/text_indices_item_marketchange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:textSize="18sp" />

            <mobiletrading.design.TextViewHightLight
                android:id="@+id/text_indices_item_marketchangeP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:textSize="18sp" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5" >

                <TextView
                    style="@style/Label_Style"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:text="@string/GiaTri" />

                <mobiletrading.design.TextViewHightLight
                    android:id="@+id/text_indices_item_value"
                    style="@style/Content_Style"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/text_color" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/lc_separation_color" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5" >

                <TextView
                    style="@style/Label_Style"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/KhoiLuong_2" />

                <mobiletrading.design.TextViewHightLight
                    android:id="@+id/text_indices_item_volume"
                    style="@style/Content_Style"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/text_color" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_weight="5"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5" >

                <TextView
                    style="@style/Label_Style"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/GiaoDich_2" />

                <mobiletrading.design.TextViewHightLight
                    android:id="@+id/text_indices_item_trade"
                    style="@style/Content_Style"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/text_color" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/lc_separation_color" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/img_up"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_up" />

                    <mobiletrading.design.TextViewHightLight
                        android:id="@+id/text_indices_item_upstocks"
                        style="@style/Content_Style"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/green_text" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_downred" />

                    <mobiletrading.design.TextViewHightLight
                        android:id="@+id/text_indices_item_downstocks"
                        style="@style/Content_Style"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/red_brown_text" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginRight="5dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_yellow" />

                    <mobiletrading.design.TextViewHightLight
                        android:id="@+id/text_indices_item_refstocks"
                        style="@style/Content_Style"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/yellow_text" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>