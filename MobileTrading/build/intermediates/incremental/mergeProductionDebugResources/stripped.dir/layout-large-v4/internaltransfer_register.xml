            <RelativeLayout
                android:layout_width="@dimen/t_cashtransfer_frame_width"
                android:layout_height="@dimen/t_cashtransfer_frame_content"
                android:layout_marginLeft="@dimen/t_cashtransferregister_marginleft" >

                <TextView
                    android:id="@+id/tv_tennguoithuhuong"
                    style="@style/Label_Style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/TenNguoiThuHuong"
                    android:textSize="@dimen/t_cashtransfer_labletextsize" />

                <FrameLayout
                    android:id="@+id/tv_markerror_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_tennguoithuhuong"
                    android:visibility="gone" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="@color/red_color" />
                </FrameLayout>

                <TextView
                    android:id="@+id/text_DKCT_noibo_NguoiNhan"
                    style="@style/Content_Style"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@id/tv_tennguoithuhuong"
                    android:textSize="15sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/lc_separation_color" />
            </RelativeLayout>
        </LinearLayout>

