<?xml version="1.0" encoding="utf-8"?>
                                                       

    

                 
                                  
                                                          
           

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res/com.fss.tcbs.mobiletrading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:weightSum="10" android:tag="layout-large/advancecash_0" xmlns:tools="http://schemas.android.com/tools">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="6"
            android:background="@android:color/white">

            <LinearLayout
                android:id="@+id/indicatorbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="8"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/lblTaoGiaoDich"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:background="#dddddd"
                        android:gravity="center"
                        android:text="@string/TaoGiaoDich"
                        android:textColor="#333333" />

                    <TextView
                        android:id="@+id/lblXacNhan"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="-10dp"
                        android:layout_weight="5"
                        android:background="#ffffff"
                        android:gravity="center"
                        android:text="@string/XacNhan_UT"
                        android:textColor="#333333" />
                </LinearLayout>

            </LinearLayout>

            <ScrollView

                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_above="@+id/buttonbar"
                android:layout_below="@+id/indicatorbar"
                android:fillViewport="true"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/vTaoGiaoDich"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/lblTieuKhoanChuyen"
                            style="@style/Label_Style"
                            android:layout_width="180dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:text="@string/TieuKhoan"
                            android:textStyle="bold" />

                        <mobiletrading.design.MySpinner
                            android:id="@+id/spn_TieuKhoanChuyen"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_alignTop="@+id/lblTieuKhoanChuyen"
                            android:layout_marginRight="10dp"
                            android:layout_toRightOf="@+id/lblTieuKhoanChuyen" />

                        <TextView
                            android:id="@+id/lblTienBanConLai"
                            style="@style/Label_Style"
                            android:layout_width="180dp"
                            android:layout_height="30dp"
                            android:layout_below="@+id/lblTieuKhoanChuyen"
                            android:layout_marginLeft="10dp"
                            android:text="@string/TienBanConLai"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/vlueTienBanConLai"
                            style="@style/Label_Style"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_alignTop="@+id/lblTienBanConLai"
                            android:layout_toLeftOf="@+id/btnChiTietTienBan"
                            android:layout_toRightOf="@+id/lblTienBanConLai" />

                        <Button
                            android:id="@+id/btnChiTietTienBan"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignTop="@+id/lblTienBanConLai"
                            android:background="@color/transparent"
                            android:padding="0dp"
                            android:text="@string/ChiTiet"
                            android:textAllCaps="false"
                            android:textColor="#ff0000" />

                        <LinearLayout
                            android:id="@+id/headerTienBan"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_below="@+id/lblTienBanConLai"
                            android:background="#cccccc"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:gravity="center"
                                android:text="@string/NgayBan"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:gravity="center"
                                android:text="@string/TienBanDaTruPhiThue"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.5"
                                android:gravity="center"
                                android:text="@string/SoNgayUngTruoc"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <ListView
                            android:id="@+id/lvTienBan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/headerTienBan"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/lblTienUngToiDa"
                            style="@style/Label_Style"
                            android:layout_width="180dp"
                            android:layout_height="30dp"
                            android:layout_below="@+id/lvTienBan"
                            android:layout_marginLeft="10dp"
                            android:text="@string/TienUngTruocToiDa"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/vlueTienUngToiDa"
                            style="@style/Label_Style"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_alignTop="@+id/lblTienUngToiDa"
                            android:layout_marginRight="10dp"
                            android:layout_toRightOf="@+id/lblTienUngToiDa" />

                        <TextView
                            android:id="@+id/lblSoTienUng"
                            style="@style/Label_Style"
                            android:layout_width="180dp"
                            android:layout_height="30dp"
                            android:layout_below="@+id/lblTienUngToiDa"
                            android:layout_marginLeft="10dp"
                            android:text="@string/SoTienUng"
                            android:textStyle="bold" />

                        <mobiletrading.design.NumberEditText
                            android:id="@+id/edtSoTienUng"
                            style="@style/EditText_Style"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_alignTop="@+id/lblSoTienUng"
                            android:layout_toLeftOf="@+id/btnChiTietTienUng"
                            android:layout_toRightOf="@+id/lblSoTienUng"
                            android:background="#f4f4f4"
                            android:digits="0123456789,"
                            android:hint="@string/SoTienUng"
                            android:inputType="number"
                            android:paddingLeft="5dp"
                            android:singleLine="true"
                            android:textColorHint="@color/edittext_hint_color"
                            android:textCursorDrawable="@drawable/shape_textcursoredittext" />

                        <Button
                            android:id="@+id/btnChiTietTienUng"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignTop="@+id/lblSoTienUng"
                            android:background="@color/transparent"
                            android:padding="0dp"
                            android:text="@string/ChiTiet"
                            android:textAllCaps="false"
                            android:textColor="#ff0000" />

                        <TextView
                            android:id="@+id/lblErrMsg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/lblSoTienUng"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:textColor="#ff0000"

                            />

                        <LinearLayout
                            android:id="@+id/headerTienUng"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_below="@+id/lblErrMsg"
                            android:background="#cccccc"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2.5"
                                android:gravity="center"
                                android:textSize="12sp"
                                android:text="@string/NgayBan" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:gravity="center"
                                android:textSize="12sp"
                                android:text="@string/SoTienUng" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.5"
                                android:gravity="center"
                                android:textSize="12sp"
                                android:text="@string/SoNgayUngTruoc" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:gravity="center"
                                android:textSize="12sp"
                                android:id="@+id/phiUngPercent" />
                            <!--<TextView-->
                                <!--android:id="@+id/phiUngPercent"-->
                                <!--android:layout_width="0dp"-->
                                <!--android:layout_height="match_parent"-->
                                <!--android:layout_weight="1.5"-->
                                <!--android:gravity="center"-->
                                <!--android:textSize="12sp" />-->
                        </LinearLayout>

                        <ListView
                            android:id="@+id/lvTienUng"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/headerTienUng"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/lblPhiUng"
                            style="@style/Label_Style"
                            android:layout_width="180dp"
                            android:layout_height="30dp"
                            android:layout_below="@+id/lvTienUng"
                            android:layout_marginLeft="10dp"
                            android:text="@string/PhiUng"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/vluePhiUng"
                            style="@style/Label_Style"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_alignTop="@+id/lblPhiUng"
                            android:layout_toEndOf="@+id/lblPhiUng"
                            android:layout_toRightOf="@+id/lblPhiUng" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/vXacNhan"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/confirm_lblTieuKhoan"
                            style="@style/Label_Style"
                            android:layout_width="180dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="10dp"
                            android:text="@string/TieuKhoan"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/confirm_vlueTieuKhoan"
                            style="@style/Label_Style"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_alignTop="@+id/confirm_lblTieuKhoan"
                            android:layout_marginRight="10dp"
                            android:layout_toRightOf="@+id/confirm_lblTieuKhoan" />

                        <TextView
                            android:id="@+id/confirm_lblSoTienUng"
                            style="@style/Label_Style"
                            android:layout_width="180dp"
                            android:layout_height="30dp"
                            android:layout_below="@+id/confirm_lblTieuKhoan"
                            android:layout_marginLeft="10dp"
                            android:text="@string/SoTienUng"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/confirm_vlueSoTienUng"
                            style="@style/Label_Style"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_alignTop="@+id/confirm_lblSoTienUng"
                            android:layout_marginRight="10dp"
                            android:layout_toRightOf="@+id/confirm_lblSoTienUng" />

                        <TextView
                            android:id="@+id/confirm_lblPhiUng"
                            style="@style/Label_Style"
                            android:layout_width="180dp"
                            android:layout_height="30dp"
                            android:layout_below="@+id/confirm_lblSoTienUng"
                            android:layout_marginLeft="10dp"
                            android:text="@string/PhiUng"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/confirm_vluePhiUng"
                            style="@style/Label_Style"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_alignTop="@+id/confirm_lblPhiUng"
                            android:layout_marginRight="10dp"
                            android:layout_toRightOf="@+id/confirm_lblPhiUng" />

                        <LinearLayout
                            android:id="@+id/lblMaXacNhanMess"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_below="@+id/confirm_lblPhiUng"
                            android:background="#dddddd"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp">

                            <TextView
                                android:id="@+id/tvMaXacNhanMess"
                                style="@style/Label_Style_Mess"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/NhapMaOTPDuocGuiDenDienThoai"
                                android:textSize="12sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/tvTime"
                                style="@style/Label_Style_Mess"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/tvThoiGianNhapOTP"
                                android:textSize="12sp"
                                android:textStyle="bold"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:id="@+id/linearLayoutOTP"
                            android:layout_below="@+id/lblMaXacNhanMess"
                            android:weightSum="10"
                            android:gravity="center">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="8"
                            android:orientation="horizontal"
                            android:layout_gravity="center">
                        <EditText
                            android:id="@+id/edtMaOTP"
                            style="@style/EditText_Style"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:background="#f4f4f4"
                            android:inputType="textPassword"
                            android:hint="@string/NhapOTPHint"
                            android:gravity="center"
                            android:singleLine="true"
                            android:textColorHint="@color/edittext_hint_color"
                            android:layout_weight="6"/>
                        <Button
                            android:id="@+id/btnNhanLaiOTP"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_below="@+id/lblMaXacNhanMess"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/border_ungtruoc_nhapotp"
                            android:text="@string/NhanLaiOTP"
                            android:textAllCaps="false"
                            android:textColor="#ff0000"
                            android:layout_weight="2"/>
                        </LinearLayout>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/lblErrMsgOTP"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/linearLayoutOTP"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:text=""
                            android:textColor="#ff0000"

                            />
                    </RelativeLayout>
                </LinearLayout>
            </ScrollView>

            <LinearLayout
                android:id="@+id/buttonbar"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignParentBottom="true"
                android:background="#dddddd"
                android:orientation="horizontal"
                android:paddingTop="1dp">

                <RelativeLayout
                    android:id="@+id/relativeHuy"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:background="@color/white_text">

                    <TextView
                        android:id="@+id/lblHuy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/Huy"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@+id/lblHuy"
                        android:src="@drawable/remove_symbol"
                        android:id="@+id/imgCancelBack"/>

                    <Button
                        android:id="@+id/btnHuy"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent" />
                </RelativeLayout>
                <View
                    android:id="@+id/view"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/lc_separation_color" />
                <RelativeLayout
                    android:id="@+id/relativeTiepTuc"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:background="@color/white_text">

                    <TextView
                        android:id="@+id/lblTiepTuc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/TiepTuc"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@+id/lblTiepTuc"
                        android:src="@drawable/correct_symbol" />

                    <Button
                        android:id="@+id/btnTiepTuc"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent" />
                </RelativeLayout>


            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

         