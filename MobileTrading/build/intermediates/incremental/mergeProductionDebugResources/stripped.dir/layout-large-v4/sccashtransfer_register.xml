            <RelativeLayout
                android:layout_width="@dimen/t_cashtransfer_frame_width"
                android:layout_height="@dimen/t_cashtransfer_frame_content"
                android:layout_marginLeft="@dimen/t_cashtransferregister_marginleft" >

                <TextView
                    android:id="@+id/tv_tennguoithuhuong"
                    style="@style/Label_Style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/TenNguoiThuHuong"
                    android:textSize="@dimen/t_cashtransfer_labletextsize" />

                <TextView
                    android:id="@+id/text_sctransferregis_beneficiaryname"
                    style="@style/Content_Style"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@id/tv_tennguoithuhuong"
                    android:layout_marginBottom="5dp"
                    android:textSize="@dimen/t_cashtransfer_contenttextsize" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/lc_separation_color" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/t_cashtransfer_frame_height"
            android:layout_marginTop="20dp"
            android:gravity="bottom"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="@dimen/t_cashtransfer_frame_width"
                android:layout_height="@dimen/t_cashtransfer_frame_content" >

                <TextView
