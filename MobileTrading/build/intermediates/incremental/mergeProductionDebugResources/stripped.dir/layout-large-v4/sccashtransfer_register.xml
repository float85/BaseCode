<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.fss.tcbs.mobiletrading"
    android:id="@+id/sccashtransfer_register"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg_fragment"
    android:gravity="center_horizontal"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:padding="@dimen/t_padding_content" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/t_cashtransfer_frame_height"
            android:layout_marginTop="15dp"
            android:gravity="bottom"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/text_sccashtransfer_register_switch"
                android:layout_width="@dimen/t_cashtransfer_frame_width"
                android:layout_height="@dimen/t_cashtransfer_frame_content"
                android:clickable="true" >

                <TextView
                    android:id="@+id/lbl_myspinner_spn"
                    style="@style/Label_Style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_toLeftOf="@+id/btn_myspinner"
                    android:clickable="false"
                    android:singleLine="true"
                    android:text="@string/HinhThucChuyenKhoan"
                    android:textSize="@dimen/t_cashtransfer_labletextsize" />

                <TextView
                    android:id="@+id/text_myspinner_spn"
                    style="@style/Content_Style"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@+id/lbl_myspinner_spn"
                    android:layout_marginBottom="5dp"
                    android:layout_toLeftOf="@+id/btn_myspinner"
                    android:clickable="false"
                    android:gravity="bottom"
                    android:singleLine="true"
                    android:text="@string/SCTransfer"
                    android:textSize="@dimen/t_cashtransfer_contenttextsize" />

                <ImageButton
                    android:id="@+id/btn_myspinner"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@color/transparent"
                    android:clickable="false"
                    android:padding="0dp"
                    android:rotation="90"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_arrow" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/lc_separation_color" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/t_cashtransfer_frame_width"
                android:layout_height="@dimen/t_cashtransfer_frame_content"
                android:layout_marginLeft="@dimen/t_cashtransferregister_marginleft" >

                <TextView
                    android:id="@+id/tv_taikhoannganhang"
                    style="@style/Label_Style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/TaiKhoanNganHang"
                    android:textSize="@dimen/t_cashtransfer_labletextsize" />

                <TextView
                    android:id="@+id/tv_markerror_tkmnh"
                    style="@style/Label_Style"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_taikhoannganhang"
                    android:textColor="#FF0000"
                    android:textSize="@dimen/t_cashtransfer_labletextsize" />

                <EditText
                    android:id="@+id/edt_sctransferregis_accountbank"
                    style="@style/Content_Style"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@id/tv_taikhoannganhang"
                    android:layout_marginBottom="5dp"
                    android:textColorHint="@color/edittext_hint_color"
                    android:background="@drawable/bg_edittext_hideunderline"
                    android:hint="@string/TaiKhoanNganHang"
                    android:textSize="@dimen/t_cashtransfer_contenttextsize" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/lc_separation_color" />
            </RelativeLayout>

            <!-- <mobiletrading.design.LabelContentLayout -->
