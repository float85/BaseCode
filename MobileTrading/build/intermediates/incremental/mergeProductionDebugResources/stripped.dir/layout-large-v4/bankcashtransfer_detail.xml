<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.fss.tcbs.mobiletrading"
    android:id="@+id/bankcashtransfer_detail"
    android:layout_width="@dimen/cashtransferconfirm_width"
    android:layout_height="fill_parent"
    android:background="@color/bg_fragment_tablet"
    android:layout_gravity="center"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:gravity="center"
        android:text="@string/BankCashTransferDetail"
        android:textColor="@color/text_color"
        android:textSize="18sp"
        android:visibility="gone" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:fillViewport="true"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <mobiletrading.design.LabelContentLayout
                android:id="@+id/text_CTout_chitiet_Tieukhoan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentgravity="left"
                app:labelText="@string/TieuKhoanChuyen"
                app:labelweight="5"
                app:orientation="horizontal" />

            <mobiletrading.design.LabelContentLayout
                android:id="@+id/text_CTout_chitiet_NguoiNhan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentgravity="left"
                app:labelText="@string/TenNguoiNhan"
                app:labelweight="5"
                app:orientation="horizontal" />

            <mobiletrading.design.LabelContentLayout
                android:id="@+id/text_CTout_chitiet_SoTKNH"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentgravity="left"
                app:labelText="@string/SoTaiKhoanNganHang"
                app:labelweight="5"
                app:orientation="horizontal" />

            <mobiletrading.design.LabelContentLayout
                android:id="@+id/text_CTout_chitiet_NganHang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentgravity="left"
                app:labelText="@string/NganHangNhan"
                app:labelweight="5"
                app:orientation="horizontal"
                app:singleLine="true" />

            <mobiletrading.design.LabelContentLayout
                android:id="@+id/text_CTout_chitiet_PGD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:contentgravity="left"
                app:labelText="@string/PhongGiaoDich"
                app:labelweight="5"
                app:orientation="horizontal"
                app:singleLine="true" />

            <mobiletrading.design.LabelContentLayout
                android:id="@+id/text_CTout_chitiet_TinhTP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:contentgravity="left"
                app:labelText="@string/TinhThanhPho"
                app:labelweight="5"
                app:orientation="horizontal"
                app:singleLine="true" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/header_separation_color" />

            <mobiletrading.design.LabelContentLayout
                android:id="@+id/text_CTout_chitiet_SoDu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentgravity="left"
                app:labelText="@string/SoDuTienVND"
                app:labelweight="5"
                app:orientation="horizontal" />

            <mobiletrading.design.LabelContentLayout
                android:id="@+id/text_CTout_chitiet_SoTienChuyen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentgravity="left"
                app:labelText="@string/SoTienChuyenVND"
                app:labelweight="5"
                app:orientation="horizontal" />

            <mobiletrading.design.LabelContentLayout
                android:id="@+id/text_CTout_chitiet_PhiChuyenTien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentgravity="left"
                app:labelText="@string/PhiNThue"
                app:labelweight="5"
                app:orientation="horizontal" />

            <mobiletrading.design.LabelContentLayout
                android:id="@+id/text_CTout_chitiet_TongTien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentgravity="left"
                app:labelText="@string/TongTienVND"
                app:labelweight="5"
                app:orientation="horizontal" />

            <mobiletrading.design.LabelContentLayout
                android:id="@+id/text_CTout_chitiet_NoiDung"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentgravity="left"
                app:labelText="@string/NoiDung"
                app:labelweight="5"
                app:orientation="horizontal" />

            <mobiletrading.design.LabelContentLayout
                android:id="@+id/edt_CTout_chitiet_tradingcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentColor="@color/text_color"
                app:contentHint="@string/MaXacThuc"
                app:contentgravity="left"
                app:editable="true"
                app:inputType="textPassword"
                app:labelText="@string/MaXacThuc"
                app:labelweight="5"
                app:orientation="horizontal" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btn_CTout_chitiet_Back"
                    style="@style/Button_Background1"
                    android:layout_width="@dimen/t_button_width"
                    android:layout_marginRight="50dp"
                    android:background="@drawable/bg_grey_button_corner5"
                    android:text="@string/QuayLai" />

                <Button
                    android:id="@+id/btn_CTout_chitiet_Accept"
                    style="@style/Button_Background1"
                    android:layout_width="@dimen/t_button_width"
                    android:text="@string/XacNhan" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>