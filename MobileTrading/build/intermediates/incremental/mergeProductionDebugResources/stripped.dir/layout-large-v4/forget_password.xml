<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.fss.tcbs.mobiletrading"
    android:id="@+id/forget_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:paddingLeft="@dimen/m_paddingLeft"
    android:paddingRight="@dimen/m_paddingRight" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:paddingBottom="25dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:focusable="true"
            android:focusableInTouchMode="true" >

            <TextView
                android:id="@+id/lbl_forgetpassword_account"
                style="@style/Label_Style"
                android:layout_width="wrap_content"
                android:text="@string/TaiKhoanDangNhap" />

            <TextView
                style="@style/Label_Style"
                android:layout_width="wrap_content"
                android:layout_alignBottom="@+id/lbl_forgetpassword_account"
                android:layout_toRightOf="@+id/lbl_forgetpassword_account"
                android:text="(*)"
                android:textColor="#ff0000" />

            <EditText
                android:id="@+id/edt_forgetpassword_account"
                style="@style/EditText_Style"
                android:layout_width="match_parent"
                android:layout_below="@+id/lbl_forgetpassword_account"
                android:hint="@string/TaiKhoanDangNhap"
                android:singleLine="true"
                android:textColorHint="@color/edittext_hint_color"
                android:textCursorDrawable="@drawable/shape_textcursoredittext" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/lc_separation_color" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true" >

            <TextView
                android:id="@+id/lbl_forgetpassword_idpeople"
                style="@style/Label_Style"
                android:layout_width="wrap_content"
                android:text="@string/SoCMND" />

            <TextView
                style="@style/Label_Style"
                android:layout_width="wrap_content"
                android:layout_alignBottom="@+id/lbl_forgetpassword_idpeople"
                android:layout_toRightOf="@+id/lbl_forgetpassword_idpeople"
                android:text="(*)"
                android:textColor="#ff0000" />

            <EditText
                android:id="@+id/edt_forgetpassword_idpeople"
                style="@style/EditText_Style"
                android:layout_width="match_parent"
                android:layout_below="@+id/lbl_forgetpassword_idpeople"
                android:hint="@string/SoCMND"
                android:inputType="number"
                android:singleLine="true"
                android:textColorHint="@color/edittext_hint_color"
                android:textCursorDrawable="@drawable/shape_textcursoredittext" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/lc_separation_color" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true" >

            <TextView
                android:id="@+id/lbl_forgetpassword_phone"
                style="@style/Label_Style"
                android:layout_width="wrap_content"
                android:text="@string/SoDienThoai" />

            <TextView
                style="@style/Label_Style"
                android:layout_width="wrap_content"
                android:layout_alignBottom="@+id/lbl_forgetpassword_phone"
                android:layout_toRightOf="@+id/lbl_forgetpassword_phone"
                android:text="(*)"
                android:textColor="#ff0000" />

            <EditText
                android:id="@+id/edt_forgetpassword_phone"
                style="@style/EditText_Style"
                android:layout_width="match_parent"
                android:layout_below="@+id/lbl_forgetpassword_phone"
                android:hint="@string/SoDienThoai"
                android:inputType="number"
                android:singleLine="true"
                android:textColorHint="@color/edittext_hint_color"
                android:textCursorDrawable="@drawable/shape_textcursoredittext" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/lc_separation_color" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true" >

            <TextView
                android:id="@+id/lbl_forgetpassword_email"
                style="@style/Label_Style"
                android:layout_width="wrap_content"
                android:text="@string/Email" />

            <EditText
                android:id="@+id/edt_forgetpassword_email"
                style="@style/EditText_Style"
                android:layout_width="match_parent"
                android:layout_below="@+id/lbl_forgetpassword_email"
                android:hint="@string/Email"
                android:singleLine="true"
                android:textColorHint="@color/edittext_hint_color"
                android:textCursorDrawable="@drawable/shape_textcursoredittext" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/lc_separation_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <mobiletrading.design.MyButton
                android:id="@+id/btn_forgetpassword_reset"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginRight="50dp"
                android:layout_weight="5"
                android:background="@drawable/t_backgroundbutton_red"
                app:textMyButton="@string/XacNhan" />

            <Button
                android:id="@+id/btn_forgetpassword_back"
                style="@style/Button_Background1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="0dp"
                android:layout_weight="5"
                android:text="@string/QuayLai"
                 />
        </LinearLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_forgetpass_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="0dp"
        android:background="@color/transparent"
        android:padding="0dp"
        android:src="@drawable/ic_delete"
        android:visibility="gone" />

</RelativeLayout>