<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activitymain_tablet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dbd6d6" >

    <RelativeLayout
        android:id="@+id/large_activitymain_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/t_header_height"
        android:background="@color/bg_fragment_tablet" >

        <ImageView
            android:id="@+id/ic_menu1"
            android:layout_width="@dimen/t_header_height"
            android:layout_height="@dimen/t_header_height"
            android:background="@color/black_text"
            android:padding="@dimen/t_padding_tablet"
            android:src="@drawable/ic_menu_new" />

        <ImageView
            android:id="@+id/img_tablet_activitymain_logo"
            android:layout_width="@dimen/t_activity_logo_width"
            android:layout_height="@dimen/t_activity_logo_height"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/ic_menu1"
            android:paddingLeft="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_logo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="right|center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="3dp"
            android:paddingTop="3dp" >

            <LinearLayout
                android:layout_width="@dimen/framename_width"
                android:layout_height="match_parent"
                android:gravity="center_vertical|left"
                android:orientation="horizontal" >

                <View
                    style="@style/style_view"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/lc_separation_color" />

                <ImageView
                    android:id="@+id/img_tablet_activitymain_name"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:scaleType="fitStart"
                    android:src="@drawable/ic_account_2" />

                <TextView
                    android:id="@+id/text_tablet_activitymain_name"
                    style="@style/Label_Style"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/blue_text2" />
            </LinearLayout>

            <View
                style="@style/style_view"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/lc_separation_color" />

            <LinearLayout
                android:id="@+id/lay_chooseacc"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/text_tablet_activitymain_afacctno"
                    style="@style/Content_Style"
                    android:layout_width="wrap_content"
                    android:textColor="@color/red_brown_text" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_arrow_down" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/btn_changepassword"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:background="@color/transparent"
                android:clickable="false"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_settings"
                android:visibility="gone" />

            <View
                style="@style/style_view"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/lc_separation_color" />

            <RelativeLayout
                android:id="@+id/lay_activitymain_notify"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/t_header_height"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical" >

                <ImageButton
                    android:id="@+id/btn_activitymain_notify"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@color/transparent"
                    android:clickable="false"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_notification" />

                <TextView
                    android:id="@+id/text_activitymain_notifycounter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/btn_activitymain_notify"
                    android:background="@drawable/bg_countnotifyunread"
                    android:gravity="center"
                    android:textColor="@color/text_color"
                    android:textSize="12sp"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_header2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/t_header_height2"
        android:layout_below="@+id/large_activitymain_header"
        android:layout_marginLeft="@dimen/t_header_height"
        android:background="@drawable/actionbar_background" >

        <TextView
            android:id="@+id/tv_tablet_title"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/large_btn_footer_height"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:textAllCaps="true"
            android:textColor="#000000"
            android:textSize="@dimen/size_title"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_tablet_activitymain_orderlist"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/large_btn_footer_height"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/btn_tablet_activitymain_GTCorderlist"
            android:background="@drawable/background_btn_tfooter_orderlist"
            android:minWidth="80dp"
            android:text="@string/OrderList"
            android:textAllCaps="true"
            android:textColor="@color/white_text"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_tablet_activitymain_GTCorderlist"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/large_btn_footer_height"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/btn_tablet_activitymain_buy"
            android:background="@drawable/background_btn_tfooter_orderlist"
            android:minWidth="80dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/GTCOrder"
            android:textAllCaps="true"
            android:textColor="@color/white_text"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_tablet_activitymain_buy"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/large_btn_footer_height"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/btn_tablet_activitymain_sell"
            android:background="@drawable/background_btn_tfooter_buy"
            android:minWidth="@dimen/min_width_button"
            android:text="@string/Mua"
            android:textAllCaps="true"
            android:textColor="@color/text_color_button"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_tablet_activitymain_sell"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/large_btn_footer_height"
            android:layout_alignBaseline="@+id/btn_tablet_activitymain_buy"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/background_btn_tfooter_sell"
            android:minWidth="@dimen/min_width_button"
            android:text="@string/Ban"
            android:textAllCaps="true"
            android:textColor="@color/text_color_button"
            android:textSize="15sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/container_tablet_activitymain_function"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/large_activitymain_footer"
        android:layout_below="@+id/layout_header2"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="@dimen/padding_left_menu"
        android:layout_marginRight="7dp"
        android:layout_marginTop="7dp"
        android:background="@color/bg_fragment_tablet"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/large_activitymain_footer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/t_footer_heightnew"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/t_header_height"
        android:background="@color/t_footer_background"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_fragment_tablet"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/lay_agentinfo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    style="@style/Label_Style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="@string/ChamSocBoi" />

                <TextView
                    android:id="@+id/text_tablet_activitymain_broker"
                    style="@style/Content_Style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:textColor="@color/red_brown_text" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/lc_separation_color" />

                <TextView
                    android:id="@+id/text_tablet_activitymain_brokerphone"
                    style="@style/Content_Style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:textColor="@color/red_brown_text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/img_phone1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="15dp"
                        android:src="@drawable/ic_contact_phone_circle" />

                    <TextView
                        android:id="@+id/text_phone1"
                        style="@style/Content_Style"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center_vertical"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/img_email"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/ic_contact_email" />

                    <TextView
                        android:id="@+id/text_email"
                        style="@style/Content_Style"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center_vertical"
                        android:text="Email"
                        android:textSize="15sp"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/img_face"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/ic_contact_face" />

                    <TextView
                        android:id="@+id/text_face"
                        style="@style/Content_Style"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center_vertical"
                        android:text="Facebook"
                        android:textSize="15sp"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/img_linkedin"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/ic_aboutus_circle_linkedin"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/text_linkedin"
                        style="@style/Content_Style"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="20dp"
                        android:gravity="center_vertical"
                        android:text="LinkedIn"
                        android:textSize="15sp"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/img_skype"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/ic_contact_skype"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/text_skype"
                        style="@style/Content_Style"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="3dp"
                        android:gravity="center_vertical"
                        android:text="Skype"
                        android:textSize="12sp"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/img_yahoo"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/ic_contact_yahoo"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/text_yahoo"
                        style="@style/Content_Style"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center_vertical"
                        android:text="Yahoo"
                        android:textSize="12sp"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/verticalMenu"
        android:layout_width="@dimen/t_header_height"
        android:layout_height="match_parent"
        android:background="@color/bg_item_parent" >

        <RelativeLayout
            android:id="@+id/layout_header1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/t_header_height"
            android:background="#FFFFFF"
            android:gravity="center_vertical" >

            <ImageView
                 android:layout_width="@dimen/t_activity_logo_width"
            	android:layout_height="@dimen/t_activity_logo_height"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:minWidth="@dimen/t_activity_logo_width"
                android:maxWidth="@dimen/t_activity_logo_width"
                android:scaleType="fitXY"
                android:src="@drawable/ic_logo" />

            <ImageView
                android:id="@+id/ic_menu"
                android:layout_width="@dimen/t_header_height"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@color/black_text"
                android:padding="@dimen/t_padding_tablet"
                android:src="@drawable/ic_menu_new" />
        </RelativeLayout>

        <customwidget.slidemenutablet.SlideMenuTablet
            android:id="@+id/menu_tablet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/layout_header1"
            android:layout_marginBottom="@dimen/t_header_height" >
        </customwidget.slidemenutablet.SlideMenuTablet>

        <ImageButton
            android:id="@+id/btn_activitymain_tablet_logout"
            android:layout_width="@dimen/t_slidemenu_icon_height"
            android:layout_height="@dimen/t_slidemenu_icon_height"
            android:layout_alignParentBottom="true"
            android:background="@color/transparent"
            android:layout_marginLeft="7dp"
            android:padding="@dimen/padding_slidemenu_tablet_logout"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_logout_tablet" />
    </RelativeLayout>

</RelativeLayout>