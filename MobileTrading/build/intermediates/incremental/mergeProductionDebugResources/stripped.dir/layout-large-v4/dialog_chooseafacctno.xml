<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/background_white_conner"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#6b6b6b" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/TaiKhoan"
            android:textColor="@color/text_color"
            android:textSize="15sp"
             />

        <Button
            android:id="@+id/btn_dialog_chooseafacctno_logout"
            style="@style/Button_Background1"
            android:layout_width="70dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="@string/Logout"
            android:textSize="13sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <fragment
            android:id="@+id/frag_dialog_chooseafacctno_chooseafacctno"
            android:name="mobiletrading.function.ChooseAfacctno"
            android:layout_width="@dimen/large_dialog_chooseafacctno_width"
            android:layout_height="@dimen/large_dialog_chooseafacctno_height" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/image_arrow_bottom" />

</LinearLayout>